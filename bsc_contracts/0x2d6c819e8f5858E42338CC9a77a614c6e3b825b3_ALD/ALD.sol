        uint256 amountRec = amount;
        uint256 fundFee = amount.mul(taxes.fund).div(feeDenominator);
        _balances[fundAddress] = _balances[fundAddress].add(fundFee);
        emit Transfer(sender, fundAddress, fundFee);
        amountRec = amountRec.sub(fundFee);

        uint256 burnFee = amount.mul(taxes.burn).div(feeDenominator);
        _balances[DEAD] = _balances[DEAD].add(burnFee);
        emit Transfer(sender, DEAD, burnFee);
        amountRec = amountRec.sub(burnFee);

        uint256 nftFee = amount.mul(taxes.nft).div(feeDenominator);
        _balances[nftDividenAddress] = _balances[nftDividenAddress].add(nftFee);
        emit Transfer(sender, nftDividenAddress, nftFee);
