contract TokenPrice {
    using SafeMath for uint256;
    using SafeMath for uint112;

    function getTokenAmount(
        address router,
        address tokenA,
        address tokenB,
        uint256 aAmount
    ) public view returns (uint256) {
        IUniswapV2Router02 swapRouter = IUniswapV2Router02(router);
        address _pairAddr = IUniswapV2Factory(swapRouter.factory()).getPair(
            tokenA,
            tokenB
        );
        IUniswapV2Pair swapPair = IUniswapV2Pair(_pairAddr);
        require(_pairAddr != address(0), "get pair address error");
        (
            uint112 reserve0,
            uint112 reserve1,
            uint32 blockTimestampLast
        ) = swapPair.getReserves();

        require(reserve0 > 0 && reserve1 > 0, "get reserve 0");

        blockTimestampLast;
        if (tokenA == swapPair.token0()) {
            //aAmount/bAmount = reserve0/reserve1
            return aAmount.mul(reserve1).div(reserve0);
        } else {
            //aAmount/bAmount = reserve1/reserve0
            return aAmount.mul(reserve0).div(reserve1);
        }
    }

    function getTokenAmount2(
        address router,
        address tokenA,
        address tokenB,
        uint256 aAmount
    ) public view returns (uint256[] memory) {
        IUniswapV2Router02 swapRouter = IUniswapV2Router02(router);
        address _pairAddr = IUniswapV2Factory(swapRouter.factory()).getPair(
            tokenA,
            tokenB
        );
        IUniswapV2Pair swapPair = IUniswapV2Pair(_pairAddr);
        require(_pairAddr != address(0), "get pair address error");
        (
            uint112 reserve0,
            uint112 reserve1,
            uint32 blockTimestampLast
        ) = swapPair.getReserves();

        require(reserve0 > 0 && reserve1 > 0, "get reserve 0");

        blockTimestampLast;
        address[] memory path = new address[](2);
        path[0] = tokenA;
        path[1] = tokenB;
        return swapRouter.getAmountsOut(aAmount, path);
    }
}