        address from,
        address to,
        uint256 amount
    ) internal virtual {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        _beforeTokenTransfer(from, to, amount);

        uint256 fromShareBalance = _shareBalances[from];
        require(fromShareBalance >= amount.div(_tokensPerShare), "ERC20: transfer amount exceeds balance");
        
        uint256 _taxAmount = amount.mul(_taxRate).div(_taxRateDenominator);
        uint256 _toAmount = amount.sub(_taxAmount);
        
