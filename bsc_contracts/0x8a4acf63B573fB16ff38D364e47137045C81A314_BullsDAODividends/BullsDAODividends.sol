contract BullsDAODividends is Ownable, Pausable {
    IERC20 public token;

    mapping(address => uint256) private balances;
    mapping(address => uint256) private investments;
    mapping(address => address) private referrers;

    uint256 private lastUsersRewards;
    uint256 private totalInvested;

    constructor (IERC20 _token) {
        token = _token;
    }

    function balanceOf(address owner) public view returns (uint256) {
        return balances[owner];
    }
    
    function updateInvestment(address investor, uint256 investment, address referrer) external onlyOwner {
        investments[investor] = investment;
        totalInvested += investment;
        referrers[investor] = referrer;
    }

    function updateInvestor(address oldWallet, address newWallet) external onlyOwner {
        investments[newWallet] = investments[oldWallet];
        referrers[newWallet] = referrers[oldWallet];
        investments[oldWallet] = 0;
    }

    function deposit(uint256 amount) external onlyOwner returns (bool) {
        require(lastUsersRewards == 0);

        token.transferFrom(
            _msgSender(), 
            address(this), 
            amount
        );

        lastUsersRewards = amount;

        return true;
    }

    function updateHolders(address[] calldata holders) external onlyOwner {
        for (uint i = 0; i < holders.length; i ++) {
            uint256 userReward = lastUsersRewards * (investments[holders[i]] / totalInvested);
            address holder = holders[i];
            balances[holder] += userReward * 95 / 100;
            balances[referrers[holder]] += userReward * 5 / 100;
        }
        
        lastUsersRewards = 0;
    }

    function claim() external {
        require(balanceOf(_msgSender()) > 0, "Nothing to claim");

        token.transfer(
            _msgSender(),
            balances[_msgSender()]         
        );

        balances[_msgSender()] = 0;
    }

    function emergencyWithdraw() external onlyOwner {
        token.transfer(
            _msgSender(),
            token.balanceOf(address(this))
        );
    }
}