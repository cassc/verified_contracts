     * @dev Returns the total shares.
     */
    function totalShares() public view virtual returns (uint256) {
        return _totalShares;
    }

    /**
     * @dev Returns the tokens per share.
     */
    function tokensPerShare() public view virtual returns (uint256) {
        return _tokensPerShare;
    }

    /**
     * @dev Returns the epoch.
     */
    function epoch() public view virtual returns (uint256) {
        return _epoch;
    }

    /**
     * @dev Returns the rebase rate.
     */
    function rebaseRate() public view virtual returns (uint256) {
        return _rebaseRate;
    }

    /**
     * @dev Returns the tax rate.
     */
    function taxRate() public view virtual returns (uint256) {
        return _taxRate;
    }

    /**
     * @dev Updates the rebase rate
