//交易奖励合约
contract member {
    using SafeMath for uint256;
    address payable public manager;
    uint256 memberPrice = 100 * 10 ** 18;
    mapping(address => uint256) public rechargeAmount;
    mapping(address => bool)  public memberShip;
    IERC20 public token;

    constructor (IERC20 _outToken) public {
      token = _outToken;
      manager = msg.sender;
    }

    modifier onlyOwner() {
		require(msg.sender == manager);
		_;
	}

    function changeOwner(address payable _newOwner) public {
        manager = _newOwner;
    }

    //设置会员费用
    function setMemberPrice(uint _memberPrice) public onlyOwner {
        memberPrice = _memberPrice;
    }

    //会员充值
    function rechargeMember() public {
        require(!memberShip[msg.sender], "You are already a member");
        token.transferFrom(msg.sender, address(this), memberPrice);
        rechargeAmount[msg.sender] = memberPrice;
        memberShip[msg.sender] = true;
    }

    //检查地址是否是会员
    function checkAddressIsMember(address _user) public view returns(bool) {
        return memberShip[_user] ? true : false;
    }

    //合约里ark余额
    function outTokenBalance() public view returns(uint256) {
        return token.balanceOf(address(this));
    }

    //提取合约里ark（管理员）
    function withdrawalOutToken() public onlyOwner {
        token.transfer(msg.sender, token.balanceOf(address(this)));
    }

    //合约里BNB余额
    function getBnbBalance() public view returns(uint256) {
        return address(this).balance;
    }

    //提取合约里BNB（管理员）
    function withdrawalBNB() public onlyOwner {
        manager.transfer(address(this).balance); 
    }

    //提取合约里的任意代币，代币合约地址作为参数传入（管理员）
    function claim(address _token) public onlyOwner {
        IERC20 erc20token = IERC20(_token);
        uint256 balance = erc20token.balanceOf(address(this));
        erc20token.transfer(manager, balance);
    }
}