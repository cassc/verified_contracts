contract FreeMoonMigration {  

    using SafeMath for uint;

    modifier onlyOwner() {
        require(owner == msg.sender, "Ownable: caller is not the owner");
        _;
    }
    constructor() {
        owner = msg.sender;
    }

    IERC20 public OldToken;
    IERC20 public NewToken;
    address public owner;

    uint public minCount = 1000000000; 
    uint public price = 1000000;

    function setPrice(uint _price) onlyOwner public {
        price = _price;
    }

    function setOwner(address _owner) onlyOwner public {
        owner = _owner;
    }

    function setMinCount(uint _minCount) onlyOwner public {
        minCount = _minCount;
    }

    function setContractOldToken(IERC20 _oldToken) onlyOwner public {
        OldToken = _oldToken;
    }

    function setContractNewToken(IERC20 _newToken) onlyOwner public {
        NewToken = _newToken;
    }

    function transferNewToken( address _to, uint _amount) private {
        require(_amount <= NewToken.balanceOf(address(this)), "Balance NewToken is low");
        NewToken.transfer(_to, _amount);
    }

    function transferOldToken(uint _amount) private {
        require(_amount <= OldToken.balanceOf(msg.sender), "Balance OldToken is low");
        OldToken.transferFrom(msg.sender, address(this), _amount);
    }

    function withdrawNewToken( address _to, uint _amount) public onlyOwner {
        require(_amount <= NewToken.balanceOf(address(this)), "Balance NewToken is low");
        NewToken.transfer(_to, _amount);
    }

    function withdrawOldToken(address _to, uint _amount) public onlyOwner {
        require(_amount <= OldToken.balanceOf(address(this)), "Balance OldToken is low");
        OldToken.transfer(_to, _amount);
    }

    function withdrawChainToken(uint amount) public onlyOwner {
        payable(msg.sender).transfer(amount);
    }

    function changeOldTokens(uint _oldTokens) public {
        require(_oldTokens >= minCount);    

        uint _newTokens = SafeMath.mul(_oldTokens, price);       

        transferOldToken(_oldTokens);
        transferNewToken(msg.sender, _newTokens);
    }
}