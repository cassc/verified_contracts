    uint256 public maxTransaction;
    uint256 public maxWallet;
    mapping(address => bool) public _exTax;
    uint256 private constant supply = 1_000_000e9;
    uint256 public marketingTax;

    address public uniswapV2Pair;
    IUniswapV2Router02 router;

    constructor(
        address _router,
        string memory name,
        string memory symbol,
        uint256 _marketingTax
    ) ERC20(name, symbol, supply) {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(_router);
        router = _uniswapV2Router;

        marketingTax = _marketingTax;

        _exTax[0x000000000000000000000000000000000000dEaD] = true;
        _exTax[_router] = true;
        _exTax[msg.sender] = true;
        _exTax[address(this)] = true;

        maxWallet = (supply * 2) / 100;
        maxTransaction = (supply * 2) / 100;

        uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
            .createPair(address(this), _uniswapV2Router.WETH());
    }

    function setMarketingTax(uint256 tax) external onlyOwner {
        require(tax <= 10, "Tax cannot be higher than 10%");
        marketingTax = tax;
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        require(to != address(0), "zero address");
        require(from != address(0), "zero address");

        if (amount == 0) return;

        // Check if transfer is subject to limit
        if (!_exTax[from] && !_exTax[to]) {
            // when buying
            if (from == uniswapV2Pair) {
                require(
                    balanceOf(to) + amount <= maxWallet,
                    "maxWallet limit exceeded"
                );
            }
            require(amount <= maxTransaction, "maxTransaction limit exceeded");

            // Apply tax only for swaps
            if (from == uniswapV2Pair || to == uniswapV2Pair) {
                uint256 tax = (amount * marketingTax) / 100;
                amount -= tax;
                super._transfer(from, _marketingWallet, tax);
            }
        }

        super._transfer(from, to, amount);
    }
