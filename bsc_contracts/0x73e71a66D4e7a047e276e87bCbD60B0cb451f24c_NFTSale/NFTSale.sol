contract NFTSale is Ownable {
    using SafeMath for uint256;

    struct NFTInfo {
        uint256 price;
        bool forSale;
    }

    uint256 public basePrice = 1000000000000000000;

    mapping (address => mapping(uint=>NFTInfo)) public nftData;

    event SaleStateChange(address contractAddress,uint nftId,uint256 price,bool forSale);
    event BuySell(address contractAddress,uint nftId);

    bool public saleIsActive = false;
    bool public buyIsActive = false;
    bool public presale = true;
    uint256 public buyTax = 500; //should divide by 100
    uint256 public sellTax = 600; //should divide bt 100
    address public taxWallet = 0x68cBf1f0216A84500B68726BF670ef485B0950a0;
    address public fundWallet = 0x68cBf1f0216A84500B68726BF670ef485B0950a0;



    constructor() Ownable(){

    }

    /*
    * Pause sale if active, make active if paused
    */
    function flipSaleState() public onlyOwner {
        saleIsActive = !saleIsActive;
    }

    function flipBuyState() public onlyOwner {
        buyIsActive = !buyIsActive;
    }
    function setTaxWallet(address adres) public onlyOwner {
        taxWallet = adres;
    }
    function setFunWallet(address adres) public onlyOwner {
        fundWallet = adres;
    }

    function setBasePrice(uint256 price) public onlyOwner {
        basePrice = price;
    }
    function setBuyTax(uint256 tax) public onlyOwner {
        require(tax>0 && tax<5000,"Invalid tax");
        buyTax = tax;
    }
    function setSellTax(uint256 tax) public onlyOwner {
        require(tax>0 && tax<5000,"Invalid tax");
        sellTax = tax;
    }

    function openForSale(address contractAddress,uint nftId,uint256 price,bool forSale) public {
        require(isAuthorized(contractAddress,nftId),"You are not authorized");
        require(saleIsActive,"Sale is not active");
        require(price > uint256(0),"Price must be greater than zero");
        nftData[contractAddress][nftId] = NFTInfo(price,forSale);
        emit SaleStateChange(contractAddress,nftId,price,forSale);

    }

    function setSaleEnable(address contractAddress,uint nftId,bool forSale) public {
        if(forSale){
            require(saleIsActive,"Sale is not active");
        }
        require(isAuthorized(contractAddress,nftId) ,"You are not authorized");
        NFTInfo storage nftInfo = nftData[contractAddress][nftId];
        require(nftInfo.forSale != forSale,"Your nft already in this state");
        require(nftInfo.price > uint256(0),"Price must be greater than zero");

        nftInfo.forSale = forSale;
        nftData[contractAddress][nftId] = nftInfo;
        emit SaleStateChange(contractAddress,nftId,nftInfo.price,nftInfo.forSale);

    }


    function batchOpenForSale(address contractAddress,uint startNFTId,uint endNFTId,uint256 price,bool forSale) public virtual onlyOwner {
        IERC721 nftInterface = IERC721(contractAddress);
        require(nftInterface.isApprovedForAll(msg.sender,address(this)),"This contract must be approved for all in NFT contract");
        require(price > uint256(0),"Price must be greater than zero");
        for(uint i = startNFTId;i<=endNFTId;i++){
            nftData[contractAddress][i] = NFTInfo(price,forSale);
        }
    }

    function batchSetSaleEnable(address contractAddress,uint startNFTId,uint endNFTId,bool forSale) public virtual onlyOwner{
        IERC721 nftInterface = IERC721(contractAddress);
        require(nftInterface.isApprovedForAll(msg.sender,address(this)),"This contract must be approved for all in NFT contract");
        for(uint i = startNFTId;i<=endNFTId;i++){
            NFTInfo storage nftInfo = nftData[contractAddress][i];

            if(nftInfo.price==uint256(0)){
                nftInfo.price = basePrice;
            }
            nftData[contractAddress][i] = NFTInfo(nftInfo.price,forSale);
        }
    }
    function buyNFT(address contractAddress,uint nftId) payable external {
        
        NFTInfo storage nftInfo = nftData[contractAddress][nftId];

        uint256 buyTaxAmount = buyTax.mul(nftInfo.price) / 10000;
        uint256 sellTaxAmount = sellTax.mul(nftInfo.price) / 10000; 
        uint256 totalPayableAmount = nftInfo.price.add(buyTaxAmount);
        uint256 payableAmountToOwner = nftInfo.price.sub(sellTaxAmount);
        address receivingAddress = fundWallet;
        IERC721 nftInterface = IERC721(contractAddress);

        if(!presale){
            receivingAddress = nftInterface.ownerOf(nftId);
        }

        require(buyIsActive,"Buy is not active");
        require(nftInfo.price > 0,"NFT underprice");
        require(totalPayableAmount ==msg.value,"Amount is not valid");
        require(nftInfo.forSale,"This NFT is not open for sale");

        payable(taxWallet).transfer(sellTaxAmount.add(buyTaxAmount));
        payable(receivingAddress).transfer(payableAmountToOwner);
        nftInterface.transferFrom(nftInterface.ownerOf(nftId),msg.sender,nftId);
        emit BuySell(contractAddress,nftId);
        nftData[contractAddress][nftId] = NFTInfo(nftInfo.price,false);

    }
    function withdrawAll() public onlyOwner {
        payable(msg.sender).transfer(address(this).balance);
    }
    function isAuthorized(address contractAddress,uint nftId) public view returns (bool){
        IERC721 nftInterface = IERC721(contractAddress);
        return (nftInterface.ownerOf(nftId) == msg.sender || nftInterface.getApproved(nftId)==address(this)|| nftInterface.isApprovedForAll(msg.sender,address(this)));
    }

}