contract MintyVesting is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    struct Vesting {
        uint256 totalAmount; //Total Amount (100 as input means 100 tokens)
        uint256 minGap; // min time gap b/w two consequtive claims (input in seconds, like how often user should be able to claim)
        uint256 cliff; // tokens remain locked during this from block.timestamp (input in seconds)
        uint256 startTime;// as cliff passes, vesting begins
        uint256 vestingDuration;// how long vesting should last (like 1 year or so) input in seconds
        uint256 lastClaimTime; //last claimTime
        uint256 totalClaimed; // total Claimed
    }
    mapping(address => Vesting) public vesting;
    IERC20 public token;
    bool isLocked;

    

    constructor()  {
       token = IERC20(0xa6c598A5d3A6A37c87D4a3dbD56D09b49D39962f); // Minty Token Contract Address
    }

    

    /// _user: wallet address to assign total tokens. eg. 100 (100 tokens), 
    /// _amount: Total Amount that will distributed to above _user. 100 (means 100 tokens with 9 decimals)
    /// _minGap: gap b/w two claims (in seconds) (it automatically calculate the unlock percentage based on the total vesting duration)
    /// _cliff: cliff time during which tokens will remain locked. ( in seconds)
    /// _vestingDuration: starts from cliff end time to the duration which is set. (like 1 year or so, input will be in seconds)

    function addVesting(address  _user, uint256 _amount, uint256 _minGap, uint256 _cliff, uint256 _vestingDuration) external onlyOwner {
        vesting[_user] = Vesting(_amount*1e9, _minGap, _cliff, block.timestamp + _cliff, _vestingDuration , block.timestamp + _cliff, 0);
    }

    /// does the same as add vesting (used to add multiple accounts

    function addVestingMultiple (address [] calldata _users, uint256 [] calldata _amounts, uint256[] calldata _minGap, uint256[] calldata _cliff, uint256 [] calldata _vestingDuration) external onlyOwner {
        require(_users.length == _amounts.length, "users and amounts array length should be same");
        for (uint256 i=0; i<_users.length; i++){
         vesting[_users[i]] = Vesting(_amounts[i] * 1e9, _minGap[i] , _cliff[i], block.timestamp + _cliff[i], _vestingDuration[i], block.timestamp + _cliff[i], 0);
        }
    }

    /// add vesting for Multiple users with same cliff, vesting and minGap

    function addVestingMultipleWithSameCliffVesting (address [] calldata _users, uint256 [] calldata _amounts, uint256 _minGap, uint256 _cliff, uint256  _vestingDuration) external onlyOwner {
        require(_users.length == _amounts.length, "users and amounts array length should be same");
        for (uint256 i=0; i<_users.length; i++){
         vesting[_users[i]] = Vesting(_amounts[i] * 1e9, _minGap, _cliff, block.timestamp + _cliff, _vestingDuration, block.timestamp + _cliff, 0);
        }
        
    }


    function claim(address  _recipient) private {
        Vesting memory user = vesting[_recipient];
        uint256 vestingEndTimeStamp = user.startTime + user.vestingDuration;
        uint256 claimableAmount;
        if (user.vestingDuration > 0){
        uint256 unlockedAmountPerSecond = user.totalAmount.div(user.vestingDuration);
        
        uint256 elapsedTime;
        if (block.timestamp <= vestingEndTimeStamp) {
         elapsedTime = block.timestamp.sub(user.lastClaimTime);
        }
        
        if (block.timestamp > vestingEndTimeStamp) {
             elapsedTime = vestingEndTimeStamp.sub(user.lastClaimTime);
        }
         claimableAmount = elapsedTime.mul(unlockedAmountPerSecond);
        }

        //if vestingDuration is 0, it unlock all amount after cliff (if any)
        if (user.vestingDuration == 0){
           claimableAmount = user.totalAmount;
        }
        uint256 time = user.minGap;
        require(block.timestamp >= user.lastClaimTime + time, "minimum gap needed to passed b/w two consequitve claims");
        require(user.totalAmount - user.totalClaimed > 0, "Already claimed all tokens");
        user.lastClaimTime = block.timestamp;
        user.totalClaimed += claimableAmount;
        vesting[_recipient] = user;  
        token.transfer(_recipient,claimableAmount);
    }

     /// user can claim unlocked tokens as soon as cliff time passes.
    /// it's compatible with chainlink automation, to automate the distribution
    /// so users don't need to claim manually.
    

   function claimMultiple (address [] calldata _users) public nonReentrant {
    for(uint256 i = 0; i < _users.length; i++){
        claim(_users[i]);
    }
   }

   
}