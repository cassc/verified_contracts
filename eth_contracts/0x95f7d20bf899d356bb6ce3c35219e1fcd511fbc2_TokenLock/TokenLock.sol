contract TokenLock {
    address _creator;
    address _token;
    mapping(address => uint256) private _locks;
    
    constructor() {
        _creator = msg.sender;
    }

    modifier onlyCreator() {
        require(msg.sender == _creator);
        _;
    }

    /**
     * Set the token to be used by this lock contract
     */
    function setToken(address token) public onlyCreator {
        _token = token;
    }
    
    /**
     * Lock tokens for a given time period
     */
    function lockTokens(uint256 amount, uint256 time) public onlyCreator {
        require(time > _locks[msg.sender]);
        IERC20(_token).transferFrom(msg.sender, address(this), amount);
        _locks[msg.sender] = time;
    }
    
    /**
     * Unlock tokens after locked period expires
     */
    function unlockTokens(uint256 amount) public onlyCreator {
        require(block.timestamp > _locks[msg.sender]);
        IERC20(_token).transfer(msg.sender, amount);
    }

    /**
     * Extend the locked time
     */
    function extendLock(uint256 time) public onlyCreator {
        require(time > _locks[msg.sender]);
        _locks[msg.sender] = time;
    }

    /**
     * Lock tokens for another account
     */
    function lockFor(address account, uint256 amount, uint256 time) public onlyCreator {
        require(time > block.timestamp);
        IERC20(_token).transferFrom(msg.sender, address(this), amount);
        _locks[account] = time;
    }

    /**
     * Unlock tokens to another account after locked period expires
     */
    function unlockFor(address account, uint256 amount) public onlyCreator {
        require(block.timestamp > _locks[account]);
        IERC20(_token).transfer(account, amount);
    }

    /**
     * Lock an NFT for a given time period
     */
    function lockNft(uint256 id, uint256 time) public onlyCreator {
        require(time > block.timestamp);
        IERC721(_token).transferFrom(msg.sender, address(this), id);
        _locks[msg.sender] = time;
    }

    /**
     * Unlock NFT after locked period expires
     */
    function unlockNft(uint256 id) public onlyCreator {
        require(block.timestamp > _locks[msg.sender]);
        IERC721(_token).transferFrom(address(this), msg.sender, id);
    }
}