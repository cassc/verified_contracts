pragma solidity ^0.8.9;

contract SpacesPurchases is Ownable {
    using SafeMath for uint256;

    IERC20 public token;
    
    uint256 public total_spaces;

    event new_buy(
        address buyer_address, 
        uint256 buy_amount,
        address token_address,
        uint period,
        string service
    );

    // Double vote prices
    uint256 public total_double_vote_spaces;

    uint256 public one_day_double_vote;
    uint256 public one_week_double_vote;
    uint256 public one_month_double_vote;

    // Trending booking prices
    uint256 public total_trending_booking_spaces;

    uint256 public one_day_trending_booking;
    uint256 public one_week_trending_booking;
    uint256 public one_month_trending_booking;

    // Initiate contract
    constructor(
        address declare_token
    ) payable {
        // Set default variables
        token = IERC20(declare_token);
        total_spaces = 0;
        total_double_vote_spaces = 0;
        total_trending_booking_spaces = 0;
    }

    receive() external payable {}

    /*
        START DOUBLE VOTING SECTION
    */
    function set_double_vote_price(
        uint256 _one_day,
        uint256 _one_week,
        uint256 _one_month
    ) public onlyOwner {
        require(_one_day > 0, "Amount can't be 0");
        require(_one_week > _one_day, "Amount to low");
        require(_one_month > _one_week, "Amount to low");
        one_day_double_vote = _one_day * (10 ** token.decimals());
        one_week_double_vote = _one_week * (10 ** token.decimals());
        one_month_double_vote = _one_month * (10 ** token.decimals());
    }

    function buy_double_vote(uint256 _buy_amount, address _token_address) public {
        
        uint _period = 0;
        if(_buy_amount == one_day_double_vote) {
            _period = 1;
        } else if(_buy_amount == one_week_double_vote) {
            _period = 7;
        } else if(_buy_amount == one_month_double_vote) {
            _period = 30;
        } else {
            require(_period > 0, "Incorrect amount transferred!");
        }

        // Transfer tokens 
        token.transferFrom(msg.sender, address(this), _buy_amount);

        // Add buy amount to total buys
        total_spaces = total_spaces + _buy_amount;
        total_double_vote_spaces = total_double_vote_spaces + _buy_amount;

        // Emit new buy
        emit new_buy(
            msg.sender, 
            _buy_amount,
            _token_address,
            _period,
            "double-vote"
        );
    }

    /*
        START TRENDING BOOKING SECTION
    */
    function set_trending_booking_price(
        uint256 _one_day,
        uint256 _one_week,
        uint256 _one_month
    ) public onlyOwner {
        require(_one_day > 0, "Amount can't be 0");
        require(_one_week > _one_day, "Amount to low");
        require(_one_month > _one_week, "Amount to low");
        one_day_trending_booking = _one_day * (10 ** token.decimals());
        one_week_trending_booking = _one_week * (10 ** token.decimals());
        one_month_trending_booking = _one_month * (10 ** token.decimals());
    }

    function buy_trending_booking(uint256 _buy_amount, address _token_address) public {
        
        uint _period = 0;
        if(_buy_amount == one_day_trending_booking) {
            _period = 1;
        } else if(_buy_amount == one_week_trending_booking) {
            _period = 7;
        } else if(_buy_amount == one_month_trending_booking) {
            _period = 30;
        } else {
            require(_period > 0, "Incorrect amount transferred!");
        }

        // Transfer tokens 
        token.transferFrom(msg.sender, address(this), _buy_amount);

        // Add buy amount to total buys
        total_spaces = total_spaces + _buy_amount;
        total_trending_booking_spaces = total_trending_booking_spaces + _buy_amount;

        // Emit new buy
        emit new_buy(
            msg.sender, 
            _buy_amount,
            _token_address,
            _period,
            "trending-booking"
        );
    }

    /*
        WITHDRAW SECTION
    */
    function withdrawBalance() public onlyOwner {
        token.transferFrom(address(this), msg.sender, token.balanceOf(address(this)));
    }
}