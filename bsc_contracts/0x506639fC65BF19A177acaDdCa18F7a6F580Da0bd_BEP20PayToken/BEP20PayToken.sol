contract BEP20PayToken is Ownable{
    using SafeMath for uint256;
    address private uniswapRouterV2Address = address(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    IUniswapV2Router02 public immutable uniswapV2Router;

    address private _usdtAddress = address(0x55d398326f99059fF775485246999027B3197955);    
    address private _token = address(0x378EBA58FC19D311D3DD228e8d107d664C742673);    
    address private _feeAddress = address(0xEf4Bac50DBd3ffB2114B8c0a83490FBb472AC376);
    event PayToken(address indexed token, address indexed sender, uint  amount);
    event BuyPower(address indexed token, uint  amount);

    event WithDrawalToken(address indexed token, address indexed sender, uint indexed amount);

    constructor() {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(uniswapRouterV2Address);
        uniswapV2Router = _uniswapV2Router;  
    }

    function payToken(uint amount) external returns(bool){
        require(0 < amount, 'Amount: must be > 0');
        address sender = _msgSender();
        IERC20(_usdtAddress).transferFrom(sender, address(this), amount);
        emit PayToken(_usdtAddress, sender, amount);
        return true;
    }

    function buyPower(uint amount) external onlyOwner returns(bool){
        require(0 < amount, 'Amount: must be > 0');

        uint _feeAmount = amount.mul(5).div(100);
        IERC20(_usdtAddress).transfer(_feeAddress, _feeAmount);

        uint _buyAmount = amount.mul(50).div(100);
        _buyToken(_buyAmount);

        emit BuyPower(_usdtAddress, amount);
        return true;        
    }

    function withDrawalToken(address token,address _address, uint amount) external onlyOwner returns(bool){

        IERC20(token).transfer(_address, amount);

        emit WithDrawalToken(token, _address, amount);

        return true;
    }

    function setToken(address token) external onlyOwner returns(bool){
        _token = token;
        return true;
    }

    function setFeeAddress(address _fee) external onlyOwner returns(bool){
        _feeAddress = _fee;
        return true;
    }    

    function _buyToken(uint256 tokenAmount) internal {
        address[] memory path = new address[](2);
        path[0] = _usdtAddress;
        path[1] = _token;

        IERC20(_usdtAddress).approve(uniswapRouterV2Address, tokenAmount);
        
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0, 
            path,
            address(this),
            block.timestamp
        );    
    }
}