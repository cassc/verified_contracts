pragma solidity ^0.8.19;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

contract ErmineMEME is ERC20, Ownable {
    uint256 public burned;

    event Burn(address indexed from, uint256 amount);

    constructor () ERC20 ("Ermine MEME", "EMEM") {
        _mint(msg.sender, 42828*1e28); //428,280,000,000,000 $EMEM
    }

//Burning is available to everyone
    function burn(uint256 amount) external {
        require(balanceOf(msg.sender) >= amount, "There are not enough tokens on your balance!");
        _burn(msg.sender, amount);
        burned += amount;
        emit Burn(msg.sender, amount);
    }    

}