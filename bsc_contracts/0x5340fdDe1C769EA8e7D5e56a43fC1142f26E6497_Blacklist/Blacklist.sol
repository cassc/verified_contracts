pragma solidity ^0.8.0;



contract Blacklist is IBlacklist, Ownable {
  mapping (uint => bool) public override blocked;
  mapping (address => bool) public override addressBlocked;

  address public animal;

  constructor(address animal_) {
    animal = animal_;
  }

  function setAnimal(address animal_) external onlyOwner {
    animal = animal_;
  }

  function addBlockedAddresses(address[] calldata addrs) external onlyOwner {
    for(uint i = 0; i < addrs.length; i++) {
      if(!addressBlocked[addrs[i]]){
        addressBlocked[addrs[i]] = true;
      }
    }
  }

  function removeBlockedAddresses(address[] calldata addrs) external onlyOwner {
    for(uint i = 0; i < addrs.length; i++) {
      if(addressBlocked[addrs[i]]){
        addressBlocked[addrs[i]] = false;
      }
    }
  }

  function addBlockIds(uint[] calldata tokenIds) external onlyOwner {
    for(uint i = 0; i < tokenIds.length; i++) {
      if(!blocked[tokenIds[i]]) {
        blocked[tokenIds[i]] = true;
      }
    }
  }

  function addByOwner(address _owner) external onlyOwner {
    uint balance = IWTAnimal(animal).balanceOf(_owner);
    for(uint i = 0; i < balance; i++) {
      uint tokenId = IWTAnimal(animal).tokenOfOwnerByIndex(_owner, i);
      if(!blocked[tokenId]){
        blocked[tokenId] = true;
      }
    }
  }
  
  function removeBlockIds(uint[] calldata tokenIds) external onlyOwner {
    for(uint i = 0; i < tokenIds.length; i++) {
      if(blocked[tokenIds[i]]) {
        blocked[tokenIds[i]] = false;
      }
    }
  }
}