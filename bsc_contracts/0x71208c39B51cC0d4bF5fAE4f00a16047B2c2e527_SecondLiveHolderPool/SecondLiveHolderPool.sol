pragma solidity ^ 0.8.0;
// SPDX-License-Identifier: UNLICENSED



contract SecondLiveHolderPool  is Ownable {
    
    bool private initialized;
    
    uint256 public soldAmount;
    mapping(uint256 => bool) public isClaimedById;
    address public avatar;
    address public originalNFT;
    uint256 public _rule;
    uint256 public _quality;
    
    event Claim(address sender, uint256 tokenId);

    function initialize(
        address _owner,
        address _avatar,
        address _originalNFT,
        uint256 rule_,
        uint256 quality_) public {
        require(!initialized, "initialize: Already initialized!");
        _transferOwnership(_owner);
        avatar = _avatar;
        originalNFT = _originalNFT;
        _rule = rule_;
        _quality = quality_;
        initialized = true;
    }

    function claim(uint256 /*amount*/, 
        uint256 /*addressId*/,
        bytes32[] memory /*merkleProof*/) external {
        uint256 balance = IERC721Enumerable(originalNFT).balanceOf(msg.sender);
        require(balance>0,"Not the holder.");
        uint256 claimId = 0;
        for (uint256 index = 0; index < balance; index++) {
            claimId = IERC721Enumerable(originalNFT).tokenOfOwnerByIndex(msg.sender, index);
            if (!isClaimedById[claimId]) {
                break;
            }else{
              claimId = 0;  
            }
        }
        require(claimId != 0, "have claimed");

        ISecondLiveEditor.Attribute memory _attribute;

        _attribute.rule = _rule;
        _attribute.quality = _quality + claimId;
        _attribute.format = 1;
        _attribute.extra = claimId;
        
        ISecondLiveEditor(avatar).mint(msg.sender, _attribute);
        
        isClaimedById[claimId] = true;
        
        soldAmount = soldAmount + 1;

        emit Claim(msg.sender, claimId);
    }
    
    function isClaimed(address /*sender*/) external pure returns(bool) {
        return false;
    }

    function isCanClaim(address sender) public view returns (bool){
        uint256 balance = IERC721Enumerable(originalNFT).balanceOf(sender);
        if (balance>0) {
            for (uint256 index = 0; index < balance; index++) {
                uint256 claimId = IERC721Enumerable(originalNFT).tokenOfOwnerByIndex(sender, index);
                if (!isClaimedById[claimId]) {
                    return true;
                }
            }
            return false;
        } else {
            return false;
        }
    }
}