contract PoliticianDebate is RrpRequesterV0, ReentrancyGuard {
    event PoliticianRequest(uint256 indexed requestId);
    event PoliticianResult(uint256 indexed requestId, uint256 didWin, uint256 chosenNumber, uint256 winningNumber);
    event MayhemBuyback(uint256 amount, uint256 timestamp);

    struct Player {
        uint256 choice;
        uint256 bet;
        uint256 randomNum;
        address payable player;
        bool didWin;
        bool fulfilled;
    }

    address public airnode;
    bytes32 public endpointIdUint256;
    address payable public sponsorWallet;
    bytes32 public lastRequestId;
    mapping(bytes32 => Player) public players;
    address private owner;
    uint256 public lastBuyBackTime;

    // Constants
    address constant routerAddress = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
    address constant WETH = 0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2;
    address constant tokenAddress = 0x760b3adB45c7e927d32fB052c2977de4857563eD;
    address constant deadAddress = 0x000000000000000000000000000000000000dEaD;
    uint256 constant minETHBuyback = 1.5 ether;

    constructor(address _airnodeRrp) RrpRequesterV0(_airnodeRrp) {
        owner = msg.sender;
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "Only the contract owner can call this function");
        _;
    }

    // To receive funds from the sponsor wallet and send them to the owner.
    receive() external payable {
        payable(owner).transfer(address(this).balance);
    }

    function setRequestParameters(
        address _airnode,
        bytes32 _endpointIdUint256,
        address payable _sponsorWallet
    ) external onlyOwner {
        airnode = _airnode;
        endpointIdUint256 = _endpointIdUint256;
        sponsorWallet = _sponsorWallet;
    }

    function startDebate(uint256 choice) external payable nonReentrant {
        require(choice >= 0 && choice <= 2, "Choice must be between 0 and 2");
        require(msg.value >= 0.005 ether && msg.value <= 0.5 ether, "Bet must be between 0.005 and 0.5 ETH");

        lastRequestId = airnodeRrp.makeFullRequest(
            airnode,
            endpointIdUint256,
            address(this),
            sponsorWallet,
            address(this),
            this.fulfill.selector,
            ""
        );

        players[lastRequestId] = Player(choice, msg.value, 0, payable(msg.sender), false, false);
        emit PoliticianRequest(uint256(lastRequestId));
    }
    

    function fulfill(bytes32 requestId, bytes calldata data)
        external
        onlyAirnodeRrp
        nonReentrant
    {
        require(players[requestId].fulfilled == false, "This request has already been fulfilled");

        uint256 randomNumber = abi.decode(data, (uint256));
        uint256 result = (randomNumber % 3);

        Player storage player = players[requestId];
        player.fulfilled = true;
        player.randomNum = randomNumber;
        bool didWin = (player.choice == result);

        if (didWin) {
            player.didWin = true;
            uint256 payout = player.bet * 2;
            player.player.transfer(payout);
        }

        uint256 didWinEncoded = didWin ? 1 : 0;
        emit PoliticianResult(uint256(requestId), didWinEncoded, player.choice, result);
    }

    function checkForBuyBack()
        external
    {
        Player storage player = players[lastRequestId];
        require(player.fulfilled == true, "This request has not yet been fulfilled");

        uint256 randomAmount = ((player.randomNum % 400) + 100) * 10**15; 
        uint256 randomInterval = (player.randomNum % 296) + 5; // Adjusted to between 5 and 300 minutes

        if (address(this).balance > minETHBuyback && block.timestamp - lastBuyBackTime > randomInterval * 1 minutes) {
            performTokenBuyback(randomAmount);
            lastBuyBackTime = block.timestamp;
        }
    }

    function performTokenBuyback(uint256 buyBackAmount) private nonReentrant {
        IUniswapV2Router02 uniswapRouter = IUniswapV2Router02(routerAddress);

        address[] memory path = new address[](2);
        path[0] = WETH;
        path[1] = tokenAddress;

        uniswapRouter.swapExactETHForTokensSupportingFeeOnTransferTokens{value: buyBackAmount}(
            0,
            path,
            address(this),
            block.timestamp + 300  // Adjusted to maximum 300 minutes
        );

        IERC20 token = IERC20(tokenAddress);
        uint256 tokenBalance = token.balanceOf(address(this));
        token.transfer(deadAddress, tokenBalance);

        emit MayhemBuyback(buyBackAmount, block.timestamp);
    }

    function isBuyBackReady()
        public
        view
        returns (bool, uint256)
    {
        Player storage player = players[lastRequestId];
        if (player.fulfilled == false) {
            return (false, 0);
        }
        uint256 randomInterval = (player.randomNum % 296) + 5;  // Adjusted to between 5 and 300 minutes

        return (address(this).balance > minETHBuyback && block.timestamp - lastBuyBackTime > randomInterval * 1 minutes, randomInterval);
    }

    function withdrawETH(uint256 amount) external onlyOwner nonReentrant {
        require(address(this).balance >= amount, "Contract does not have enough Ether to withdraw");
        payable(owner).transfer(amount);
    }

    function withdraw(address _airnode, address _sponsorWallet) external onlyOwner {
    airnodeRrp.requestWithdrawal(_airnode, _sponsorWallet);
    }

}