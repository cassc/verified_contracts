contract MinerClaim is ReentrancyGuard, Ownable, Pausable {
    using SafeMath for uint256;

    IERC20 public minerToken;
    IERC721 public minerNFT;

    uint256 public WEEK_SECONDS = 604800;

    struct Claim {
        uint256 totalClaimed;
        uint256 lastClaimed;
    }

    struct Pool {
        uint256 startTime;
        uint256 rewardRate;
        uint256 endTime;
    }

    mapping(uint256=>Pool) private pool;

    mapping(uint256=>mapping(uint256=>Claim)) private tokenClaims;
    
    event RewardsClaimed(uint256 indexed tokenId, uint256 indexed rewards, address indexed claimedBy, uint256 poolId);
    
    constructor(){}

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function checkClaim(uint256 poolId, uint256 tokenId) public view returns(Claim memory) {
        return tokenClaims[poolId][tokenId];
    }

    function checkPool(uint256 poolId) public view returns(Pool memory) {
        return pool[poolId];
    }

    function checkClaims(uint256 poolId, uint256[] calldata tokenIds) public view returns(Claim[] memory){
        Claim[] memory claims = new Claim[](tokenIds.length);
        for(uint256 i = 0; i < tokenIds.length; i++){
            claims[i] = tokenClaims[poolId][tokenIds[i]];
        }
        return claims;
    }

    function claimMines(uint256 poolId, uint256[] calldata tokenIds) external nonReentrant whenNotPaused {
        require(pool[poolId].rewardRate != 0, "Pool is not started");
        for(uint256 i = 0; i < tokenIds.length; i++){
            claimMines(poolId, tokenIds[i]);
        }
    }

    function claimMines(uint256 poolId, uint256 tokenId) internal {
        require(minerNFT.ownerOf(tokenId) == msg.sender, "You do not hold the token");
        Claim storage claim = tokenClaims[poolId][tokenId];
        require(claim.lastClaimed.add(WEEK_SECONDS) <= block.timestamp, "You can claim once a week only");
        claim.lastClaimed = block.timestamp;
        uint256 totalRewards = calculateRewards(poolId);
        uint256 claimable = totalRewards.sub(claim.totalClaimed);
        claim.totalClaimed += claimable;
        minerToken.transfer(msg.sender, claimable);
        emit RewardsClaimed(tokenId, claimable, msg.sender, poolId);
    }

    function calculateRewards(uint256 poolId) internal view returns(uint256){
        uint256 rewardrate = pool[poolId].rewardRate;
        uint256 endTime = pool[poolId].endTime;
        uint256 eTime = endTime == 0 ? block.timestamp : endTime;
        uint256 timeElapsed = eTime - pool[poolId].startTime;
        uint256 weeksElapsed = timeElapsed.div(WEEK_SECONDS);
        return rewardrate * weeksElapsed;
    }

    function setMinerTokenAddress(IERC20 _minerToken) external onlyOwner {
        minerToken = _minerToken;
    }

    function setTokenAddress(IERC721 _minerNFT) external onlyOwner {
        minerNFT = _minerNFT;
    }

    function setPool(uint256 poolId, uint256 rewardrate, uint256 startTime) public onlyOwner {
        pool[poolId].rewardRate = rewardrate;
        pool[poolId].startTime = startTime;
    }

    function endPool(uint256 poolId) public onlyOwner {
        pool[poolId].endTime = block.timestamp;
    }

    function withdrawToken(IERC20 _token) external nonReentrant onlyOwner {
        _token.transfer(owner(), _token.balanceOf(address(this)));
    }
}