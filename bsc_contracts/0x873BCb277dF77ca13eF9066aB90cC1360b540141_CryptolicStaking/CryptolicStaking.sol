// File: CPTLC_Staking.sol


pragma solidity ^0.8.16;




interface IParentToken {
    function setStakingAmount(address wallet_, uint256 amount_, uint256 addremove_) external;
    function getUserUnstaked(address wallet_) external view returns(uint256);
}

contract CryptolicStaking is Ownable {
    using SafeMath for uint256;

    IERC20 public dividendToken;
    IParentToken public parentToken;

    uint256 public totalStaked;
    uint256 public totalDividends;
    uint256 public totalRealized;

    mapping(address => uint256) public userStaked;
    mapping(address => uint256) public userStart;
    mapping(address => uint256) public userDividends;
    mapping(address => uint256) public userRealized;

    uint256 public stakingAPR = 12 * (10**18);
    uint256 public secPerYear = (60*60*24*365);
    uint256 public divPerSec = stakingAPR.div(secPerYear);

    constructor() {
        parentToken = IParentToken(0x2F3a64922E82d23cEd259545D4D13BdaD97209ED);
        dividendToken = IERC20(0x2F3a64922E82d23cEd259545D4D13BdaD97209ED);
    }

    /*
     * Admin Functions
     */
    function updateStakingAPR(uint256 newapr_) external onlyOwner {
        stakingAPR = newapr_.mul(10**18);
        divPerSec = stakingAPR.div(secPerYear);
    }

    function clearStuckTokens(address token_) external onlyOwner {
        IERC20(token_).transfer(msg.sender, IERC20(token_).balanceOf(address(this)));
    }

    function clearStuckBNB() external onlyOwner {
        payable(msg.sender).transfer(address(this).balance);
    }

    /*
     * User Functions
     */
    function stakeTokens(uint amount_) external {
        require(amount_ > 0, "You must stake at least one token");
        require(parentToken.getUserUnstaked(msg.sender) >= amount_, "Not enough tokens available");

        if(userStaked[msg.sender] > 0) {
            compoundDividends(msg.sender);
            try parentToken.setStakingAmount(msg.sender, amount_, 0) {
                userStaked[msg.sender] += amount_;
                totalStaked += amount_;
            } catch {}
        }
        else {
            try parentToken.setStakingAmount(msg.sender, amount_, 0) {
                userStaked[msg.sender] += amount_;
                resetUserStats(msg.sender);
                totalStaked += amount_;
            } catch {}
        }
    }

    function withdrawTokens(uint amount_) external {
        require(amount_ > 0 && amount_ <= userStaked[msg.sender], "Invalid amount specified");

        doHarvestDividends(msg.sender);

        try parentToken.setStakingAmount(msg.sender, amount_, 1) {
            userStaked[msg.sender] -= amount_;
            resetUserStats(msg.sender);
            totalStaked -= amount_;
        } catch { }
    }

    function compoundDividends(address user_) public {
        require(msg.sender == user_ || msg.sender == address(this), "You are not authorized");

        uint256 compoundAmount = getUnpaidDividends(user_);
        try parentToken.setStakingAmount(user_, compoundAmount, 0) {
            userStaked[user_] += compoundAmount;
            dividendToken.transfer(user_, compoundAmount);
            resetUserStats(user_);
            totalStaked += compoundAmount;
        } catch {}
    }

    function harvestDividends() external {
        doHarvestDividends(msg.sender);
    }

    /*
     * Support Functions
     */
    function calcUserDividends(address user_) internal returns (uint256) {
        totalDividends -= userDividends[user_];
        uint256 newDividends = userStaked[user_].mul(block.timestamp.sub(userStart[user_])).mul(divPerSec).div(100*(10**18));
        userDividends[user_] = newDividends;
        totalDividends += newDividends;

        return newDividends;
    }

    function getUnpaidDividends(address user_) internal returns (uint256) {
        uint256 unpaidDividends = calcUserDividends(user_).sub(userRealized[user_]);

        return unpaidDividends;
    }

    function viewUnpaidDividends() external view returns (uint256) {
        return userStaked[msg.sender].mul(block.timestamp.sub(userStart[msg.sender])).mul(divPerSec).div(100*(10**18)).sub(userRealized[msg.sender]);
    }

    function doHarvestDividends(address user_) internal {
        uint256 unpaidDividends = getUnpaidDividends(user_);
        if(unpaidDividends > 0) {
            dividendToken.transfer(user_, unpaidDividends);
            userRealized[user_] += unpaidDividends;
            totalRealized += unpaidDividends;
        }
    }

    function resetUserStats(address user_) internal {
        totalDividends -= userDividends[user_];
        totalRealized -= userRealized[user_];
        userDividends[user_] = 0;
        userRealized[user_] = 0;
        userStart[user_] = block.timestamp;        
    }

    function totalUnpaidDividends() external view returns (uint256) {
        return totalDividends.sub(totalRealized);
    }
}