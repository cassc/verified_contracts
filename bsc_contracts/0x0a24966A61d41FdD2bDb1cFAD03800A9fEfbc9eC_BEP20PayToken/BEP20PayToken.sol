contract BEP20PayToken is Ownable{
    using SafeMath for uint256;
    IUniswapV2Router02 public uniswapV2Router;

    address private _uniswapRouterV2Address = address(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    address private _usdtAddress = address(0x55d398326f99059fF775485246999027B3197955);
    address private _destroyAddress = address(0x000000000000000000000000000000000000dEaD);
    address private _rewardAddress = address(0x6d77a12cBF898d23eAcecA8a30c99C1db0E1fd59);
    address private _depositAddress = address(0xA34c02bB18432387E413eE5a729166BC4cB09FF4);

    address private _hstAddress = address(0);
  
    mapping (address => uint256) private _balances;

    event PayToken(address indexed token, address indexed sender, uint amount, uint orderid);

    event WithDrawalToken(address indexed token, address indexed sender, uint indexed amount);

    event BecomeNode(address indexed sender, uint indexed amount, uint orderid);

    event swapError(string reason);

    constructor(){
        uniswapV2Router = IUniswapV2Router02(_uniswapRouterV2Address);
    }

    function setHstToken(address token) external onlyOwner{
        _hstAddress = token;
    }

    function payToken(uint amount, uint orderid) external returns(bool){
        require(0 < amount, 'Amount: must be > 0');
        address sender = _msgSender();
        IERC20(_usdtAddress).transferFrom(sender, address(this), amount);  
        _balances[sender] = _balances[sender].add(amount);
        emit PayToken(_usdtAddress, sender, amount, orderid);
        return true;
    }

    function becomeNode(uint orderid) external returns(bool){
        uint requiredAmount = 200 * 10**18;
        address sender = _msgSender();
        require(_balances[sender] >= requiredAmount, 'balances: must be >= 200');
        _balances[sender] = _balances[sender].sub(requiredAmount);
        IERC20(_usdtAddress).transfer( _rewardAddress, 60 * 10**18);
        IERC20(_usdtAddress).transfer(_depositAddress, 85 * 10**18);
        if(_hstAddress != address(0)){
            swapTokensForUsdt(45 * 10**18);
            IERC20(_usdtAddress).transfer(_hstAddress, 10 * 10**18);
        }
        emit BecomeNode(sender, requiredAmount, orderid);
        return true;
    }

	function swapTokensForUsdt(uint256 tokenAmount) private {        
        IERC20(_usdtAddress).approve(address(_uniswapRouterV2Address), tokenAmount);
		address[] memory path = new address[](2);
        path[0] = address(_usdtAddress);
        path[1] = address(_hstAddress);
        try
            uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
                tokenAmount,
                0,
                path,
                _destroyAddress,
                block.timestamp
            )
        {} catch Error(string memory reason){
            emit swapError(reason);
        }
    }

    function withDrawalToken(address token, address _address, uint amount) external onlyOwner returns(bool){
        IERC20(token).transfer(_address, amount);
        emit WithDrawalToken(token, _address, amount);
        return true;
    }
}