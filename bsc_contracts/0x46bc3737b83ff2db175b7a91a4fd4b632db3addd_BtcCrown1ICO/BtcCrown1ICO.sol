contract BtcCrown1ICO {
    using SafeMath for uint256;
    using DateTimeLibrary for uint256;

    BEP20 public btc1 = BEP20(0x42553696462F7e5537F2a844959E153bA33fb8c0);  // BTC1
    BEP20 public busd = BEP20(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56);  // BUSD
    
    address payable liquidator;
    uint256 public currentSupply = 21e4;
    uint8 [3] public referral = [10,4,2];
    uint256 public tokenSold;
    uint256 public phaseOneSaleStart;
    uint256 public phaseOneSaleEnd;
    uint256 public phaseTwoSaleStart;
    uint256 public phaseTwoSaleEnd;
    uint256 public phaseThreeSaleStart;
    uint256 public phaseThreeSaleEnd;
    uint256 public phaseFourSaleStart;
    uint256 public phaseFourSaleEnd;
    uint256 public phaseFiveSaleStart;
    uint256 public phaseFiveSaleEnd;
    
    struct User{
        address refer;
        uint256 totalDeposits;
    }
    mapping (address => User) public users;
    mapping (address => uint256) public balances;

    event Sold(address buyer, uint256 amount);
   
    modifier onlyLiquidator(){
        require(msg.sender == liquidator,"You are not authorized liquidator.");
        _;
    }

    modifier security {
        uint size;
        address sandbox = msg.sender;
        assembly { size := extcodesize(sandbox) }
        require(size == 0, "Smart contract detected!");
        _;
    }

    function getBalanceSheet() view public returns(uint256 contractTokenBalance, uint256 contractTokenSold,uint256 contractBusdBalance){
        return (
            contractTokenBalance = btc1.balanceOf(address(this)),
            contractTokenSold = tokenSold,
            contractBusdBalance = busd.balanceOf(address(this))
        );
    }

    function liverate() view public returns(uint16 price){
        if(block.timestamp>=phaseOneSaleStart && block.timestamp<=phaseOneSaleEnd){
            price = 333;
        }
        else if(block.timestamp>=phaseTwoSaleStart && block.timestamp<=phaseTwoSaleEnd){
            price = 200;
        }
        else if(block.timestamp>=phaseThreeSaleStart && block.timestamp<=phaseThreeSaleEnd){
            price = 142;
        }
        else if(block.timestamp>=phaseFourSaleStart && block.timestamp<=phaseFourSaleEnd){
            price = 111;
        }
        else if(block.timestamp>=phaseFiveSaleStart && block.timestamp<=phaseFiveSaleEnd){
            price = 100;
        }
        return price;
    }

    constructor() public {
        liquidator = msg.sender;
        users[liquidator].totalDeposits = 10e18;
        phaseOneSaleStart = DateTimeLibrary.timestampFromDateTime(2022, 11, 1, 0, 0, 0);
        phaseOneSaleEnd = DateTimeLibrary.timestampFromDateTime(2022, 11, 15, 23, 59, 59);

        phaseTwoSaleStart = DateTimeLibrary.timestampFromDateTime(2022, 11, 16, 0, 0, 0);
        phaseTwoSaleEnd = DateTimeLibrary.timestampFromDateTime(2022, 11, 30, 23, 59, 59);

        phaseThreeSaleStart = DateTimeLibrary.timestampFromDateTime(2022, 12, 1, 0, 0, 0);
        phaseThreeSaleEnd = DateTimeLibrary.timestampFromDateTime(2022, 12, 15, 23, 59, 59);

        phaseFourSaleStart = DateTimeLibrary.timestampFromDateTime(2022, 12, 16, 0, 0, 0);
        phaseFourSaleEnd = DateTimeLibrary.timestampFromDateTime(2022, 12, 31, 23, 59, 59);

        phaseFiveSaleStart = DateTimeLibrary.timestampFromDateTime(2023, 1, 1, 0, 0, 0);
        phaseFiveSaleEnd = DateTimeLibrary.timestampFromDateTime(2023, 1, 15, 23, 59, 59);
    }

    function buy(address _refer, uint256 _busd) public security{
        if(msg.sender!=liquidator){
            require(users[_refer].totalDeposits>=10e18 && _refer!=msg.sender,"Invalid Referer!");
        }
        require(_busd>=10e18 && _busd<=1000e18,"Investment from $10 to $1000 is allowed.");
        uint16 price = liverate();
        phaseSale(msg.sender, _refer, _busd, price);
    }

    function phaseSale(address buyer, address _refer, uint256 _busd, uint256 phasePrice) internal {
        busd.transferFrom(msg.sender,address(this),_busd);
        uint256 scaledAmount = _busd.mul(phasePrice.div(100));
        require(currentSupply >= _busd.mul(phasePrice.div(100)).div(1e18));
        users[msg.sender].totalDeposits+=_busd;
        tokenSold += scaledAmount.div(1e18);
        if(buyer!=liquidator){
            if(users[buyer].refer==address(0x0)){
                users[buyer].refer = _refer;
            }
            distributeReferral(buyer, scaledAmount);
        }
        emit Sold(buyer, scaledAmount.div(1e18));
        require(btc1.transfer(buyer, scaledAmount));
    }

    function distributeReferral(address direct, uint256 _btc1) internal{
        for(uint8 i=0; i<referral.length; i++){
            btc1.transfer(users[direct].refer,_btc1.mul(referral[i]).div(100));
            direct = users[direct].refer;
            if(users[direct].refer==address(0x0)) break;
        }
    }

    function releaseLiquidityFund(address _liquidator, uint _amount) external onlyLiquidator{
        busd.transfer(_liquidator,_amount);
    }
   
    function releaseTokenAndCloseICO(address _liquidator,uint _amount) external onlyLiquidator{
        btc1.transfer(_liquidator,_amount);
        tokenSold += _amount.div(1e18);
    }
}

