contract PTC is IERC20, Ownable {
    using SafeMath for uint256;

    mapping(address => uint256) private _tOwned;
    mapping(address => mapping(address => uint256)) private _allowances;
    mapping(address => bool) private _isExcludedFromFee; // 免fee名单

    string public _name ;
    string public _symbol ;
    uint8 public _decimals ;
    uint256 private _tTotal ;

    uint256 public startTradeBlock;
    bool public startPublicBuy;

    //买入 10%
    uint256 public _buyFee ; // 营销百分之10

    //卖出或者转账
    uint256 public _PtFee; // 8%购买pt
    uint256 public _repoFee; //回购百分之5%
    uint256 public _burnFee ; //燃烧百分之4%
    uint256 public _marketFee; //营销百分之3%

    address public  repoAddr; // 回购地址
    address public  marketAddr; // 营销钱包
    address public ptAddr; //PT币地址

    address[] public shareholders;
    mapping (address => uint256) public shareholderIndexes;
    uint256 public currentIndex;
    mapping (address => uint256) public shareholderClaims;
    IUniswapV2Router02 public immutable uniswapV2Router;
    address public uniswapV2Pair;
    uint256 distributorGas = 500000 ;

    constructor(
    ) payable {
        address adminAddress =msg.sender;
        _name = "PTC";
        _symbol = "PTC";
        _decimals= 8;
        _tTotal = 343434 *(10**uint256(_decimals));
        _burnFee = 400;
        _buyFee = 1000;
        _repoFee = 100;
        _PtFee = 800;
        _marketFee = 300;
        _tOwned[adminAddress] = _tTotal;

        _isExcludedFromFee[msg.sender] = true;
        _isExcludedFromFee[address(this)] = true;
        repoAddr = 0xBd9Cb8dea2Bf0920dCcA2f1B610f55Ee03646825;
        marketAddr = 0x197f6813D4D1F542f64976Aa14f177941FBE219e;

        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(
          0x10ED43C718714eb63d5aA57B78B54704E256024E
        );

        _allowances[address(this)][address(_uniswapV2Router)] = ~uint256(0);

        // Create a uniswap pair for this new token
        uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
        .createPair(address(this), _uniswapV2Router.WETH());
        uniswapV2Router = _uniswapV2Router;

        _swapPairList[uniswapV2Pair] = true;
        emit Transfer(address(0), adminAddress,  _tTotal);
    }

    function distributeDividend(address shareholder ,uint256 amount) internal {
        (bool b1, ) = ptAddr.call(abi.encodeWithSignature("transfer(address,uint256)", shareholder, amount));
        require(b1, "call error");
    }


    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint256) {
        return _decimals;
    }

    function totalSupply() public view override returns (uint256) {
        return _tTotal;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return _tOwned[account];
    }

    function transfer(address recipient, uint256 amount)
    public
    override
    returns (bool)
    {
        _transfer(msg.sender, recipient, amount);
        return true;
    }

    function allowance(address owner, address spender)
    public
    view
    override
    returns (uint256)
    {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount)
    public
    override
    returns (bool)
    {
        _approve(msg.sender, spender, amount);
        return true;
    }

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(
            sender,
            msg.sender,
            _allowances[sender][msg.sender].sub(
                amount,
                "ERC20: transfer amount exceeds allowance"
            )
        );
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue)
    public
    virtual
    returns (bool)
    {
        _approve(
            msg.sender,
            spender,
            _allowances[msg.sender][spender].add(addedValue)
        );
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue)
    public
    virtual
    returns (bool)
    {
        _approve(
            msg.sender,
            spender,
            _allowances[msg.sender][spender].sub(
                subtractedValue,
                "ERC20: decreased allowance below zero"
            )
        );
        return true;
    }



    function isExcludedFromFee(address account) public view returns (bool) {
        return _isExcludedFromFee[account];
    }
    function excludeFromFee(address account) public onlyOwner {
        _isExcludedFromFee[account] = true;
    }

    function includeInFee(address account) public onlyOwner {
        _isExcludedFromFee[account] = false;
    }


    //to recieve ETH from uniswapV2Router when swaping
    receive() external payable {}

    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) private {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    mapping(address => bool) public _swapPairList;
    mapping (address => bool) public whiteList;
    function setSwapPairList(address addr, bool enable) external onlyOwner {
        _swapPairList[addr] = enable;
    }

    function setWhiteList(address acc,bool newValue) public onlyOwner {
        whiteList[acc] = newValue;
    }
    function _transfer(
        address from,
        address to,
        uint256 amount
    ) private {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");

        if(_swapPairList[from]){
            require(startTradeBlock!=0 && block.timestamp>=startTradeBlock, "not start trade");
        }

        if(!startPublicBuy && _swapPairList[from]){
            require(whiteList[to],"buy not allow");
        }


        bool takeFee = true;
        //if any account belongs to _isExcludedFromFee account then remove the fee
        if (_isExcludedFromFee[from] || _isExcludedFromFee[to]) {
            takeFee = false;
        }
        //transfer amount, it will take  fee
        _tokenTransfer(from, to, amount, takeFee);

    }

    //this method is responsible for taking all fee, if takeFee is true
    function _tokenTransfer(
        address sender,
        address recipient,
        uint256 tAmount,
        bool takeFee
    ) private {
        _tOwned[sender] = _tOwned[sender].sub(tAmount);

        uint256 recipientRate = 10000;
        if(takeFee){
            //买入
            if(_swapPairList[sender]){
                _takeTransfer(sender,marketAddr, tAmount,_buyFee);
                recipientRate -= _buyFee;
            }else{
                //回购 5
                _takeTransfer(sender,repoAddr, tAmount, _repoFee);
                //购买PT 8
                 _tOwned[address(this)] += tAmount.div(10000).mul(_PtFee);
                swapTokensForPT(tAmount.div(10000).mul(_PtFee));
                //营销 3
                _takeTransfer(sender,marketAddr, tAmount, _marketFee);
                //销毁 4
                _takeburnFee(sender, tAmount.div(10000).mul(_burnFee));

                recipientRate = recipientRate-
                                _repoFee -
                                _PtFee -
                                _marketFee -
                                _burnFee;
            }
        }

        _tOwned[recipient] = _tOwned[recipient].add(
            tAmount.div(10000).mul(recipientRate)
        );
        emit Transfer(sender, recipient, tAmount.div(10000).mul(recipientRate));
    }

    function _takeTransfer(
        address sender,
        address to,
        uint256 tAmount,
        uint256 currentRate
    ) private {
        if(currentRate==0)return;
        uint256 rAmount = tAmount.div(10000).mul(currentRate);
        _tOwned[to] = _tOwned[to].add(rAmount);
        emit Transfer(sender, to, rAmount);
    }

    function _takeburnFee(
        address sender,
        uint256 tAmount
    ) private {
        if (_burnFee == 0) return;
        _tOwned[address(0)] = _tOwned[address(0)].add(tAmount);
        emit Transfer(sender, address(0), tAmount);
    }

    function swapTokensForPT(uint256 tokenAmount) public{
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = ptAddr;

        _approve(address(this), address(uniswapV2Router), tokenAmount);

        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0,
            path,
            marketAddr,
            block.timestamp
        );
    }

    function setFee(uint256[] memory value) onlyOwner  public  {
        _buyFee = value[0];
        _repoFee = value[1];
        _PtFee = value[2];
        _marketFee =  value[3];
        _burnFee =  value[4];
    }

    function startTrade() external onlyOwner {
        require(0 == startTradeBlock, "trading");
        startTradeBlock = block.number;
    }

    function setPTAddr(address addr) external onlyOwner {
        ptAddr = addr;
    }

    function setRepo(address addr) external onlyOwner {
        repoAddr = addr;
    }

    function setStartPublicBuy() external onlyOwner {
        startPublicBuy = true;
    }

}