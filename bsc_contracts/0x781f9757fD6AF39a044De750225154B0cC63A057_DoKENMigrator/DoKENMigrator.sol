contract DoKENMigrator is Ownable {
    using SafeMath for uint256;

    IERC20 DOKENV1 = IERC20(0xf9A2d40589271Be17612A3F57A9028A568f56e3d);
    IERC20 DOKENV2 = IERC20(0x9CFE7C5C75c4e9a9914C4332F36Be62337b0c9BC);
    uint8 constant _decimals = 18;

    bool public disableDeposit = false;
    bool public disableWithdraw = true;


    uint256 public _totalSupply = 1000000000000 * (10 ** _decimals); // 1,000,000,000,000
    uint256 public _maxWalletSize = (_totalSupply * 20) / 1000; // 2%

    uint256 public _accumulatedDeposit;
    uint256 public _depositedV2;

    mapping  (address => uint256)  public _balance;

    function setMaxWallet(uint256 pctage) external onlyOwner {
        _maxWalletSize = (_totalSupply * pctage) / 1000; // 2%
    }

    function deposit(uint256 amount) external{
        require(_balance[_msgSender()].add(amount)<=_maxWalletSize,"You exceeded max wallet size, please split into multiple wallet");
        require(!disableDeposit,"Deposit is disabled");
        require(DOKENV1.transferFrom(_msgSender(), address(this), amount));
        // add into the balance
        _balance[_msgSender()] += amount;
        _accumulatedDeposit += amount;
    }

    function withdraw() external {
        require(_balance[_msgSender()] >0,"You have no balance");
        require(!disableWithdraw,"Withdraw is disabled");
        // set the balance to zero
        uint256 withdrawAble = _balance[_msgSender()];
        require(_depositedV2.sub(withdrawAble) >= 0);
        _depositedV2 -= withdrawAble;
        _balance[_msgSender()] = 0;

        // do the transfer
        DOKENV2.transfer(_msgSender(), withdrawAble);
    }

    function changeStatus(bool _depoStats, bool _wdStats) external onlyOwner {
        disableDeposit = _depoStats;
        disableWithdraw = _wdStats;
    }

    function withdrawDoKENV1() external onlyOwner {
        require(DOKENV1.transfer(msg.sender, _accumulatedDeposit));
        _accumulatedDeposit = 0;
    }

    function depositDoKENV2(uint256 amount) external onlyOwner{
        _depositedV2 += amount;
        require(DOKENV2.transferFrom(msg.sender, address(this), amount));
    }   

     receive() external payable { }

     function setDoKENAddresses(address _vOne, address _vTwo) external onlyOwner {
        DOKENV1 = IERC20(_vOne);
        DOKENV2 = IERC20(_vTwo);
     }

     function checkBalances() external view returns(uint256,uint256){
        return (DOKENV1.balanceOf(address(this)),DOKENV2.balanceOf(address(this)));
     }
}