    function withdrawBNB(uint256 amount) external onlyOwner {
        payable(msg.sender).transfer(amount);
    }

    function withdrawToken(address tokenAddress, uint256 amount)
        external
        onlyOwner
    {
        IERC20(tokenAddress).transfer(msg.sender, amount);
    }
