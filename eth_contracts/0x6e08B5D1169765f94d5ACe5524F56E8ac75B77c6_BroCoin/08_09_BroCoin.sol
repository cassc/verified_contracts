pragma solidity ^0.8.0;

import { ERC20 } from "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import { Ownable } from "@openzeppelin/contracts/access/Ownable.sol";
import { IERC721 } from "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import { MerkleProofLib } from "lib/solmate/src/utils/MerkleProofLib.sol";

/// @notice ERC20 token for the $BRO pvp coin
contract BroCoin is Ownable, ERC20 {
    bool public publicTradingStarted;
    IERC721[] public whitelistedCollections;
    mapping(address => bool) public blacklists;

    constructor() ERC20("BroCoin", "BRO") {
        _mint(msg.sender, 1000000000 * 10 ** 18); // 1,000,000,000 BRO
        // whitelist collections
        whitelistedCollections = [
            IERC721(0x5Af0D9827E0c53E4799BB226655A1de152A425a5), // Milady
            IERC721(0xD3D9ddd0CF0A5F0BFB8f7fcEAe075DF687eAEBaB), // Remilio
            IERC721(0xABCDB5710B88f456fED1e99025379e2969F29610), // Radbro
            IERC721(0xBfE47D6D4090940D1c7a0066B63d23875E3e2Ac5) // SchizoPoster
        ];
    }

    function blacklist(address _address, bool _isBlacklisting) external onlyOwner {
        blacklists[_address] = _isBlacklisting;
    }

    function setPublicTradingStarted(bool _publicTradingStarted) external onlyOwner {
        publicTradingStarted = _publicTradingStarted;
    }

    function _beforeTokenTransfer(address from, address to, uint256 amount) internal virtual override {
        require(!blacklists[to] && !blacklists[from], "Blacklisted");
        require(publicTradingStarted || _whitelistedForTrading(from, to), "Trading is not started");
    }

    function burn(uint256 value) external {
        _burn(msg.sender, value);
    }

    function _whitelistedForTrading(address from, address to) internal view returns (bool) {
        // always true for owner
        if (from == owner() || to == owner()) {
            return true;
        }
        // always true if balanceOf from or to is >1 for whitelisted collections
        for (uint256 i = 0; i < whitelistedCollections.length; i++) {
            if (whitelistedCollections[i].balanceOf(from) > 0 || whitelistedCollections[i].balanceOf(to) > 0) {
                return true;
            }
        }
        return false;
    }
}