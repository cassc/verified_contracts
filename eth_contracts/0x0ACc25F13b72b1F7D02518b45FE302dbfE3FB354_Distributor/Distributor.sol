        require(_ohmTokenAddress != address(0), "Invalid OHM token address");
        ohmToken = IERC20(_ohmTokenAddress);
    }

    function addRecipient(address _recipient, uint256 _rate) external onlyOwner {
        require(_recipient != address(0), "Invalid recipient address");
        distributionInfo.push(DistributionInfo({
            recipient: _recipient,
            rate: _rate
        }));
    }

      function removeRecipient(uint256 _index) external onlyOwner {
        require(_index < distributionInfo.length, "Invalid recipient index");
        distributionInfo[_index] = distributionInfo[distributionInfo.length - 1];
        distributionInfo.pop();
