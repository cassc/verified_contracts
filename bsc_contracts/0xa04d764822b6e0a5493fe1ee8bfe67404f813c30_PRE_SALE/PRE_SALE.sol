contract PRE_SALE is Ownable {
  using SafeMath for uint256;


  // Project Token Address
  IERC20 public Project_Token;

  // Pre Sale Fund Collector
  address payable public Funds_Collector = payable (0x4445610Ea95101Bf6385c0A097c4Ba196eF4702F);

  // How many token units a buyer gets per BNB
  uint256 public TokensPerBNB;

  // Project Tokens Decimals Will be updated When Token is Set
  uint256 public TokensDecimals = 18;

  // Set Min and Max Buy in Wei (1BNB = 1e18 Wei)
  uint256 public Min_Buy = 1e16; // 0.01 BNB
  uint256 public Max_Buy = 2e18; // 2 BNB

  // Pre Sale Funds (in Wei)
  uint256 public PreSaleFunds;

  // Track total spend
  mapping (address => uint256) public Wei_Spent;


  function Buy_Tokens() public payable {

    require(TokensPerBNB > 0, "Tokens per BNB has not been set");
    require(TokensDecimals > 0, "Token decimals has not been set");

    uint256 Amount = msg.value;

    // Check that amount does not exceed limits
    uint256 AlreadyBought = Wei_Spent[msg.sender];
    require(AlreadyBought + Amount <= Max_Buy, "Purchase would exceed max buy limits");

    require(Amount >= Min_Buy, "Buy amount is below minimum permitted"); 
    require(Amount <= Max_Buy, "Buy amount is above maximum permitted");

    uint256 TokensPurchased = TokensPerBNB*(10**TokensDecimals)*Amount/(10**18);

    require(Project_Token.balanceOf(address(this)) >= TokensPurchased, "Not enough tokens on pre sale contract!");
    PreSaleFunds += Amount;   
    Project_Token.transfer(msg.sender, TokensPurchased);

    Wei_Spent[msg.sender] += Amount;
    
    (bool callSuccess, ) = payable(Funds_Collector).call{value: msg.value}("");
        require(callSuccess, "Call failed");
    
  }


  function Set_TokenAddress(address Token_CA) external onlyOwner {

    Project_Token = IERC20(Token_CA);

  }

  function Set_TokenDecimals(uint256 Number_of_Decimals) external onlyOwner {

    TokensDecimals = Number_of_Decimals;

  }

  function Set_TokensPerBNB(uint256 Number_of_Tokens_Per_BNB) external onlyOwner {

    TokensPerBNB = Number_of_Tokens_Per_BNB;

  }

  function Set_TokensPurchaseLimits(uint256 Min_Wei_Amount, uint256 Max_Wei_Amount) external onlyOwner {

    Min_Buy = Min_Wei_Amount;
    Max_Buy = Max_Wei_Amount;

  }

  function remove_Tokens_Amount (uint256 Number_of_Tokens) external onlyOwner {
    Project_Token.transfer(msg.sender, Number_of_Tokens * 10 ** TokensDecimals);        
  }

  function remove_Tokens_Percent(uint256 Percent_of_Tokens) external onlyOwner {
    uint256 ContractTokens = Project_Token.balanceOf(address(this));
    Project_Token.transfer(msg.sender, ContractTokens * Percent_of_Tokens / 100);
    } 

  function token_Balance() external view returns (uint256) {
        return Project_Token.balanceOf(address(this));
  }

  function update_Fund_Collector_Wallet(address payable Wallet_Address) external onlyOwner {
    require(Wallet_Address != address(0), "Enter a valid BSC wallet address");
    Funds_Collector = Wallet_Address;
  }

  receive () external payable {

    Buy_Tokens();
  
  }

}


