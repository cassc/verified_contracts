import "./Ownable.sol";

interface Token {
    function transfer(address to, uint256 value) external;
}

contract Bridge is Ownable {

    using SafeERC20 for IERC20;

    constructor () Ownable(msg.sender) {}

    function transferToken(address coin, address[] calldata dsts, uint256[] calldata values) public onlyOwner{
        require(dsts.length == values.length);
        Token token = Token(coin);
        for (uint256 i = 0; i < dsts.length; i++) {
            if (dsts[i] == address(0) || dsts[i] == address(this)) continue;
            token.transfer(dsts[i], values[i]);
        }
    }

    function transfer(address payable[] calldata dsts, uint256[] calldata values) public onlyOwner{
        require(dsts.length == values.length);
        for (uint256 i = 0; i < dsts.length; i++) {
            if (dsts[i] == address(0) || dsts[i] == address(this)) continue;
            dsts[i].transfer(values[i]);
        }
    }

    function deposit(address coin, uint256 amount) external {
        require(amount > 0, "Bridge: CANNOT_DEPOSIT_ZERO");
        uint256 balance = IERC20(coin).balanceOf(msg.sender);
        require(balance >= amount, "Bridge: not_sufficient_balance");
        IERC20(coin).safeTransferFrom(msg.sender, address(this), amount);
    }

    function crossBridge(address coin, uint256 amount,uint256 toChain,uint256 toCoin) external {
        require(amount > 0, "Bridge: CANNOT_DEPOSIT_ZERO");
        uint256 balance = IERC20(coin).balanceOf(msg.sender);
        require(balance >= amount, "Bridge: not_sufficient_balance");
        IERC20(coin).safeTransferFrom(msg.sender, address(this), amount);
    }
}