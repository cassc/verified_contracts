        return IERC20(token_address).balanceOf(address(this));
    }

    /**
     * @dev            Allow us to see a transaction deadline's in number of seconds
     * @return uint256 Deadline of a transaction in number of seconds
     */
    function getDeadline() external view returns (uint256) {
