pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract Hellmo is ERC20, Ownable {
  bool public tradingStatus = false;
  mapping (address => bool) private _isExcludedFromFee;
  address public uniswapV2Pair;
  uint public TAX = 20;
  uint public MAX = 2;

  constructor(string memory name, string memory symbol, uint256 amount) ERC20(name, symbol) {
    _mint(msg.sender, amount * (10**uint256(decimals())));
    _isExcludedFromFee[msg.sender] = true;
  }

  function decimals() public view virtual override returns (uint8) {
    return 18;
  }

  function setExcludedFromFee(address _address, bool value) external onlyOwner {
    _isExcludedFromFee[_address] = value;
  }

  function enableTrading(bool status) external onlyOwner {
    require(uniswapV2Pair != address(0), "Hellmo: pair has not been set.");
    tradingStatus = status;
  }

  function setTax(uint value) external onlyOwner {
    require(value <= 50, "Hellmo: tax larger than 50%.");
    TAX = value;
  }

  function setMax(uint maxWallet, uint maxTransaction) external onlyOwner {
    MAX = maxWallet;
    MAX = maxTransaction;
  }

  function setUniswapV2Pair(address pair) external onlyOwner {
    uniswapV2Pair = pair;
  }

  function _transfer(address from, address to, uint amount) internal override {
    if (_isExcludedFromFee[from] || _isExcludedFromFee[to]) {
      super._transfer(from, to, amount);
      return;
    }
    
    require(tradingStatus, "Hellmo: not tradable.");

    if (from != uniswapV2Pair && to != uniswapV2Pair) {
      super._transfer(from, to, amount);
      return;
    }

    uint amountTax = (amount * TAX) / 100;
    uint amountTransfer = amount - amountTax;

    if (to == uniswapV2Pair || from == uniswapV2Pair) {
      require(amount <= (totalSupply() * MAX) / 100, "Hellmo: exceed max transaction.");
    }

    if (to != uniswapV2Pair) {
      require(balanceOf(to) + amountTransfer <= (totalSupply() * MAX) / 100, "Hellmo: exceed max wallet.");
    }

    super._transfer(from, owner(), amountTax);
    super._transfer(from, to, amountTransfer);
  }
}