contract FlashSwap {
    using SafeERC20 for IERC20;

    // Static variables
    uint256 private constant MAX_INT = 100000000000000000000000000000000000000000000000000; // 1e50
    uint256 private DEADLINE = block.timestamp + 1 days;
    address private constant PANCAKE_FACTORY = 0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73;
    address private constant PANCAKE_ROUTER = 0x10ED43C718714eb63d5aA57B78B54704E256024E;
    address private constant WBNB = 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c;

    /**
     * @dev                   Executes the trade and return the output amount
     * @param path            List of addresses of each coin in the arbitrage path
     * @param _amountIn       Input amount that we are going to trade with
     * @return amountReceived Amount that we got out of this arbitrage
     */
    function placeTrade(address[] memory path, uint256 _amountIn) private returns (uint256) {
        uint256 amountOutMin = IUniswapV2Router01(PANCAKE_ROUTER).getAmountsOut(_amountIn, path)[path.length-1];
        uint256 amountReceived = IUniswapV2Router01(PANCAKE_ROUTER).swapExactTokensForTokens(_amountIn, amountOutMin, path, address(this), DEADLINE)[path.length-1];
        require(amountReceived > 0, "Aborted Tx: Trade returned zero");
        return amountReceived;
    }

    /**
     * @dev           Initiates the FlashLoan
     * @param _amount The amount that we are goint to take FlashLoan & trade with
     * @param path    List of addresses of each coin in the arbitrage path
     */
    function startArbitrage(uint256 _amount, address[] memory path) external {
        // Approving the tokens and the maximum value they can trade
        for (uint256 i = 0; i < path.length-1; ++i)
            IERC20(path[i]).safeIncreaseAllowance(address(PANCAKE_ROUTER), MAX_INT);

        // Get the Factory Pair address for combined tokens
        address pair = IUniswapV2Factory(PANCAKE_FACTORY).getPair(path[0], WBNB);
        require(pair != address(0), "Pool does not exist");

        // Figure out which token (0 or 1) has the amount and assign
        address token0 = IUniswapV2Pair(pair).token0();
        address token1 = IUniswapV2Pair(pair).token1();
        uint256 amount0Out = path[0] == token0 ? _amount : 0;
        uint256 amount1Out = path[0] == token1 ? _amount : 0;

        // Passing data as bytes so that the 'swap' function knows it is a flashloan
        bytes memory data = abi.encode(_amount, msg.sender, path);

        // Execute the initial swap to get the loan
        IUniswapV2Pair(pair).swap(amount0Out, amount1Out, address(this), data);
    }

    /**
     * @dev            Executes the trade, pays ourself and repays the FlashLoan
     *                 This function is called by the pair that we take FlashLoan for, from the startArbitrage function
     * @param _sender  This contract address (i.e., FlashSwap contract)
     * @param _amount0 Amount of 1st coin in the pair that we have taken FlashLoan for
     * @param _amount1 Amount of 2st coin in the pair that we have taken FlashLoan for
     * @param _data    Encoded data that contains initial amount, our wallet address and arbitarge path
     */
    function pancakeCall(address _sender, uint256 _amount0, uint256 _amount1, bytes calldata _data) external {
        // Ensure this request came from the contract
        address token0 = IUniswapV2Pair(msg.sender).token0();
        address token1 = IUniswapV2Pair(msg.sender).token1();
        address pair = IUniswapV2Factory(PANCAKE_FACTORY).getPair(token0, token1);
        require(msg.sender == pair, "The sender needs to match the pair");
        require(_sender == address(this), "Sender should match this contract");

        // Decode data for calculating the repayment
        (uint256 amount, address myAddress, address[] memory path) = abi.decode(_data, (uint256, address, address[]));

        // Calculate the amount to repay at the end
        uint256 fee = ((amount * 3) / 997) + 1;
        uint256 amountToRepay = amount + fee;

        // Assign loan amount
        uint256 loanAmount = _amount0 > 0 ? _amount0 : _amount1;
        uint256 outputAmount = placeTrade(path, loanAmount);
        require(outputAmount > amountToRepay, "Arbitrage not profitable");

        // Pay Myself
        IERC20 otherToken = IERC20(path[0]);
        otherToken.transfer(myAddress, outputAmount - amountToRepay);

        // Pay FlashLoan Back
        IERC20(path[0]).transfer(pair, amountToRepay);
    }
}