    mapping(address => bool) private _isExcludedFromFee;
    mapping(address => address) public inviter;

    string  private _NAME = 'XSH';
    string  private _SYMBOL = 'XSH';
    uint256 private _DECIMALS = 18;


    address private tokenOwner = 0x0a3237422Fa0DDBC45E5Eed859e3ffAC3fF0B203;

    address private BurnAddress = 0x0000000000000000000000000000000000000001;

    address private USDTAddress = 0x55d398326f99059fF775485246999027B3197955;

    uint256 public incEveryDay = 10;

    uint256 public inFeeRatio = 300;
    uint256 public outFeeRatio = 900;
    uint256 public out2FeeRatio = 100;
    uint256 public previousInFeeRatio;
    uint256 public previousOutFeeRatio;
    uint256 public previousOut2FeeRatio;

    uint256 private _tTotal;

    uint256 private _createTime;

    IUniswapV2Router02 public immutable uniswapV2Router;
    address public immutable uniswapV2Pair;

    constructor () {
        _tTotal = 10 ** 12 * 10 ** 18;
        _owner = tokenOwner;
        _tOwned[tokenOwner] = _tTotal;
        _createTime = block.timestamp;


        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(
            0x10ED43C718714eb63d5aA57B78B54704E256024E
        );

        // Create a uniswap pair for this new token
        uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
        .createPair(USDTAddress, address(this));

        // set the rest of the contract variables
        uniswapV2Router = _uniswapV2Router;

        _isExcludedFromFee[tokenOwner] = true;
        emit OwnershipTransferred(address(0), tokenOwner);
        emit Transfer(address(0), tokenOwner, _tTotal);
    }

    function name() public view returns (string memory) {
        return _NAME;
    }

    function symbol() public view returns (string memory) {
        return _SYMBOL;
    }

    function decimals() public view returns (uint256) {
        return _DECIMALS;
    }

    function amountFormat(uint256 amount, bool format_type) private view returns (uint256){
        uint256 nowTime = block.timestamp;
        uint256 passTime = nowTime.sub(_createTime);
        uint256 incRatio = passTime.div(86400).mul(incEveryDay);
        if (format_type) {
            return amount.div(10000).mul(incRatio.add(10000));
        } else {
            return amount.mul(10000).div(incRatio.add(10000));
        }
    }

    function totalSupply() public view override returns (uint256) {
        return amountFormat(_tTotal, true);
    }

    function balanceOf(address account) public view override returns (uint256) {
        return amountFormat(_tOwned[account], true);
    }

    function isExcludedFromFee(address account) public view returns (bool) {
        return _isExcludedFromFee[account];
    }

    function excludeFromFee(address account) public onlyOwner {
        _isExcludedFromFee[account] = true;
    }

    function includeInFee(address account) public onlyOwner {
        _isExcludedFromFee[account] = false;
    }

    function setRate(uint256 InFee, uint256 OutFee, uint256 OutFee2) public onlyOwner {
        inFeeRatio = InFee;
        outFeeRatio = OutFee;
        out2FeeRatio = OutFee2;
    }

    function removeAllFee() private {
        previousInFeeRatio = inFeeRatio;
        previousOutFeeRatio = outFeeRatio;
        previousOut2FeeRatio = out2FeeRatio;
        inFeeRatio = 0;
        outFeeRatio = 0;
        out2FeeRatio = 0;
    }

    function restoreAllFee() private {
        inFeeRatio = previousInFeeRatio;
        outFeeRatio = previousOutFeeRatio;
        out2FeeRatio = previousOut2FeeRatio;
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    function allowance(address owner, address spender) public view override returns (uint256) {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount) public override returns (bool) {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(sender, _msgSender(), _allowances[sender][_msgSender()].sub(amount, "TOKEN20: transfer amount exceeds allowance"));
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].add(addedValue));
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].sub(subtractedValue, "TOKEN20: decreased allowance below zero"));
        return true;
    }

    function _approve(address owner, address spender, uint256 amount) private {
        require(owner != address(0), "TOKEN20: approve from the zero address");
        require(spender != address(0), "TOKEN20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function _transfer(address sender, address recipient, uint256 amount) private {

        amount = amountFormat(amount, false);

        require(sender != address(0), "TOKEN20: transfer from the zero address");
        require(recipient != address(0), "TOKEN20: transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");
        bool takeFee = false;

        if (sender == uniswapV2Pair || recipient == uniswapV2Pair) {
            takeFee = true;
        }

        //if any account belongs to _isExcludedFromFee account then remove the fee
        if (_isExcludedFromFee[sender] || _isExcludedFromFee[recipient]) {
            takeFee = false;
        }

        bool shouldSetInviter = balanceOf(recipient) == 0 &&
        inviter[recipient] == address(0) &&
        sender != uniswapV2Pair;

        //transfer amount, it will take tax, burn, liquidity fee
        _tokenTransfer(sender, recipient, amount, takeFee);

        if (shouldSetInviter) {
            inviter[recipient] = sender;
        }
    }

    function _tokenTransfer(address sender, address recipient, uint256 amount, bool takeFee) private {
        if (!takeFee) removeAllFee();

        _transferStandard(sender, recipient, amount);

        if (!takeFee) restoreAllFee();
    }

    function _takeInFee(address sender, uint256 tAmount) private returns (uint256) {
        if (tAmount <= 0) return 0;
        _tOwned[BurnAddress] = _tOwned[BurnAddress].add(tAmount);
        emit Transfer(sender, BurnAddress, tAmount);
        return inFeeRatio;
    }

    function _takeOutFee(address sender, uint256 tAmount) private returns (uint256) {
        uint256 allFee = outFeeRatio.add(out2FeeRatio.mul(9));
        if (allFee <= 0) return 0;
        address user = sender;
        uint256 layer = 0;
        while (inviter[user] != address(0) && layer < 10) {
            uint256 ratio = 0;
            if (layer == 0) ratio = outFeeRatio;
            else ratio = out2FeeRatio;
            if (ratio > 0) {
                _tOwned[inviter[user]] = _tOwned[inviter[user]].add(tAmount.div(10000).mul(ratio));
                emit Transfer(sender, inviter[user], tAmount.div(10000).mul(ratio));
                allFee = allFee.sub(ratio);
            }
            layer = layer.add(1);
            user = inviter[user];
        }
        if (allFee > 0) {
            _tOwned[BurnAddress] = _tOwned[BurnAddress].add(tAmount.div(10000).mul(allFee));
            emit Transfer(sender, BurnAddress, tAmount.div(10000).mul(allFee));
        }
        return outFeeRatio.add(out2FeeRatio.mul(9));
    }

    function _transferStandard(address sender, address recipient, uint256 tAmount) private {
        _tOwned[sender] = _tOwned[sender].sub(tAmount);
        uint256 feeRatio = 0;
        if (recipient == uniswapV2Pair) feeRatio = _takeOutFee(sender, tAmount);
        if (sender == uniswapV2Pair) feeRatio = _takeInFee(sender, tAmount.div(10000).mul(inFeeRatio));
        _tOwned[recipient] = _tOwned[recipient].add(tAmount.sub(tAmount.div(10000).mul(feeRatio)));
        emit Transfer(sender, recipient, tAmount.sub(tAmount.div(10000).mul(feeRatio)));
    }
}