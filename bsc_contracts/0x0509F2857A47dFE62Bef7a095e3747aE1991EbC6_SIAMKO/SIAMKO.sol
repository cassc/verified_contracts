function fulfillRandomWords(uint256 _requestId,uint256[] memory _randomWords) internal override nonReentrant()
 {
    require(Statuses[_requestId].exists,"Invalid request number");
    Statuses[_requestId].fulfilled = true;
    Statuses[_requestId].randomWord = _randomWords[0];
    uint256 winningSerial = (Statuses[_requestId].randomWord).mod(ticketSerialCounter);
    if(treasury > 0){
   (bool a,)= (feeReceiver).call{value:((treasury).mul(6)).div(100),gas:90000}("");
    treasury = ((treasury).mul(93)).div(100);
    feeTransferSucess=a;
    }
    emit requestFulfilled(_requestId,Statuses[_requestId].randomWord);
    WiningSerial = winningSerial;
    if(!(serialToAddress[winningSerial] == address(0))){
    winner = serialToAddress[winningSerial];
   (bool b,) = (serialToAddress[winningSerial]).call{value:treasury,gas:90000}("");
   winnerTransferSucess=b;
    }
        for(uint i=0;i < ticketSerialCounter;i++){
    serialToAddress[i] = payable(address(0));
    
}
ticketSerialCounter =0;
ticketsSold=0;
treasury =0;
nextDraw = (block.timestamp).add(drawInterval);
isDrawOngoing=false;
isDrawended=true;
}

function changeReceiverAddress(address payable _newFeeReceiver) public  {
    require(msg.sender == owner ,"only owner can change receiver address");
    feeReceiver = _newFeeReceiver;
    emit changeFeeReceiver(_newFeeReceiver);
}

function transferOfOwnership(address payable _newOwner) public  {
    require(msg.sender == owner,"only owner can transfer ownership");
    owner = _newOwner;
    emit transferOwnership(_newOwner);
}   
