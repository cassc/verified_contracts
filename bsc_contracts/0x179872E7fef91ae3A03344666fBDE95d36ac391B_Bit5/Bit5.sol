    ) public onlyPrivileged(collection, tokenId, kind) whenNotPaused {
        uint256 oldFee = FEE;
        FEE = (FEE * privileges[collection]) / BP;
        buy(order, signature);
        FEE = oldFee;
    }

    function acceptBidPrivilege(
        address collection,
        uint256 tokenId,
        TokenKind kind,
        Order memory order,
        bytes memory signature
    ) public onlyPrivileged(collection, tokenId, kind) whenNotPaused {
        uint256 oldFee = FEE;
        FEE = (FEE * privileges[collection]) / BP;
        acceptBid(order, signature);
        FEE = oldFee;
    }

    function acceptGlobalBidPrivilege(
        address privilegedCollection,
        uint256 privilegedTokenId,
        TokenKind kind,
        Order memory order,
        bytes memory signature,
        uint256[] memory tokenIds
    )
        public
        onlyPrivileged(privilegedCollection, privilegedTokenId, kind)
        whenNotPaused
    {
        uint256 oldFee = FEE;
        FEE = (FEE * privileges[privilegedCollection]) / BP;
        acceptGlobalBid(order, signature, tokenIds);
        FEE = oldFee;
    }

    function addRoyaltier(
        address collection,
        address user,
        uint256 percentage
    ) external {
        if (Ownable(collection).owner() != msg.sender) {
            revert Unauthorized();
        }
        if (supports2981(collection)) {
            revert CannotAddRoyalties();
        }

        uint256 totalPercentage = percentage;
        Royaltier[] memory _collectionFees = royalties[collection];
        for (uint256 i; i < _collectionFees.length; ++i) {
            if (_collectionFees[i].addr == user) {
                revert AlreadyDefined();
            }
            totalPercentage += _collectionFees[i].percentage;
        }
        if (totalPercentage > maxRoyalty) {
            revert ExceedsMaxRoyaltyPercentage();
        }

        royalties[collection].push(
            Royaltier({addr: user, percentage: percentage})
        );
    }

    function deleteRoyaltier(address collection, address user) external {
        if (Ownable(collection).owner() != msg.sender) {
            revert Unauthorized();
        }
        Royaltier[] memory _collectionFees = royalties[collection];
        for (uint256 i; i < _collectionFees.length; ++i) {
            if (_collectionFees[i].addr == user) {
                royalties[collection][i] = royalties[collection][
                    _collectionFees.length - 1
                ];
                royalties[collection].pop();
                return;
            }
        }
    }

    // Modifiers
    modifier isOrderValid(Order memory order, bytes memory signature) {
        _checkOrderValidity(order, signature);
        _;
    }

    modifier onlyPrivileged(
        address collection,
        uint256 tokenId,
        TokenKind kind
    ) {
        _checkPrivilege(collection, tokenId, kind);
        _;
    }

    // Internal functions
    function _checkPrivilege(
        address collection,
        uint256 tokenId,
        TokenKind kind
    ) internal view {
        if (privileges[collection] == 0) {
            revert CollectionIsNotPrivileged();
        }
        if (kind == TokenKind.ERC721) {
            if (IERC721(collection).ownerOf(tokenId) != msg.sender) {
                revert Unauthorized();
            }
        } else {
            if (IERC1155(collection).balanceOf(msg.sender, tokenId) < 1) {
