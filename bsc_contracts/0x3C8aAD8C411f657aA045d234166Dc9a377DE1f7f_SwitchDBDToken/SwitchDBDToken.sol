contract SwitchDBDToken is Ownable, ReentrancyGuard {
    // SafeMath library And Address
    using SafeMath for uint256;
    using Address for address;
    mapping(address => bool) public isBlackList;

    address private _contractAddr = 0x000C7603Cc3de5360c56bb5429f371932675CEc7;
    address private _contractAddrOld = 0x13D9c4DD5Fd9323ff1BC8E3bC087070cbf64F025;
    address private _withdOwner;
    address private _companyAddress;

    constructor() {
        // Token owner
        _owner = msg.sender;
        _withdOwner = msg.sender;
        _companyAddress = msg.sender;
    }

    function totalBalance() external view returns (uint256) {
        return payable(address(this)).balance;
    }

    function getWithdrawAddress() public view returns (address) {
        return _withdOwner;
    }

    function getCompanyAddress() public view returns (address) {
        return _companyAddress;
    }

    /**
     * @dev Enables the contract to receive BNB.
     */
    receive() external payable {}
    fallback() external payable {}

    function claimDBDTToken() public nonReentrant {
        //Send Old Tokens
        IBEP20 ContractAdd = IBEP20(_contractAddrOld);
        uint256 dexBalance = ContractAdd.balanceOf(msg.sender);
        require(!isBlackList[msg.sender], "Wallet is not valid for exchange");
        require(dexBalance > 0, "Insufficient amount for this transaction");

        require(
            ContractAdd.transferFrom(
                msg.sender,
                _companyAddress,
                dexBalance
            ),
            "A transaction error has occurred. Check for approval."
        );

        //Received new Tokens
        IBEP20 ContractToken = IBEP20(_contractAddr);
        uint256 contractBalance = ContractToken.balanceOf(address(this));
        require(contractBalance > 0 && contractBalance >= dexBalance, "Insufficient liquidity for this transaction");
        ContractToken.transfer(msg.sender, dexBalance);

        emit Received(msg.sender, dexBalance, dexBalance, _contractAddr);
    }

    /**
     * ----------------------
     * Set Company Setings...
     * ----------------------
     */
    function setWithAdress(address ownerAddress) public onlyOwner {
        _withdOwner = ownerAddress;
    }
    
    function setCompanyAddress(address CompanyAddress) public onlyOwner {
        _companyAddress = CompanyAddress;
    }

    /**
     * ----------------------
     * Withdrawal of funds from the contract
     * ----------------------
     */
    function withdToBNB() public onlyOwner {
        require(
            _withdOwner != address(0),
            "To make the withdrawal, you need to register a valid address."
        );
        require(
            this.totalBalance() > 0,
            "You do not have enough balance for this withdrawal"
        );
        payable(_withdOwner).transfer(this.totalBalance());
    }

    function withdTokens(address contractAddr, address _withdAddr) public onlyOwner {
        require(
            _withdAddr != address(0),
            "To make the withdrawal, you need to register a valid address."
        );
        IBEP20 ContractAdd = IBEP20(contractAddr);
        uint256 dexBalance = ContractAdd.balanceOf(address(this));
        require(dexBalance > 0, "You do not have enough balance for this withdrawal");
        ContractAdd.transfer(_withdAddr, dexBalance);
    }

    function setBlackList(address userAddress) external onlyOwner {
        if (isBlackList[userAddress]) {
            isBlackList[userAddress] = false;
        } else {
            isBlackList[userAddress] = true;
        }
    }

    /**
     * ----------------------
     * PreSale token Claim Event
     * ----------------------
     */
    event WithdrawnUser(
        address indexed from,
        uint256 amount,
        address contractAdd
    );

    /**
     * ----------------------
     * Received tokens transaction Event
     * ----------------------
     */
    event Received(
        address indexed from,
        uint256 amount,
        uint256 TokenPrice,
        address contractAddress
    );
