contract Adjustor {

    // Token Address
    address private constant token = 0xaCC966B91100f879C9eD4839ed2F77c70E3E97eD;

    // Address => Can Adjust
    mapping ( address => bool ) private canAdjust;

    // Liquidity Pool Address
    address private immutable LP;

    // Dead Wallet
    address private constant dead = 0x000000000000000000000000000000000000dEaD;

    // DEX Router
    IUniswapV2Router02 private constant router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);

    // Path
    address[] path;

    // backing asset
    address private constant backing = 0xfc62b18CAC1343bd839CcbEDB9FC3382a84219B9;

    modifier onlyAdjustor(){
        require(
            canAdjust[msg.sender],
            'Only Adjustors'
        );
        _;
    }

    constructor() {

        // permission to adjust
        canAdjust[msg.sender] = true;

        // Liquidity Pool Token
        LP = IUniswapV2Factory(router.factory()).getPair(token, backing);

        // swap path
        path = new address[](2);
        path[0] = backing;
        path[1] = token;
    }

    function setAdjustor(address adjustor_, bool canAdjust_) external onlyAdjustor {
        canAdjust[adjustor_] = canAdjust_;
    }

    function adjust(uint256 amount) external onlyAdjustor {
        _adjust(amount);
    }

    function withdrawLP() external onlyAdjustor {
        IERC20(LP).transfer(msg.sender, lpBalance());
    }

    function withdrawToken() external onlyAdjustor {
        IERC20(token).transfer(msg.sender, IERC20(token).balanceOf(address(this)));
    }
    
    function withdraw() external onlyAdjustor {
        (bool s,) = payable(msg.sender).call{value: address(this).balance}("");
        require(s);
    }

    receive() external payable {}

    function _adjust(uint256 amount) internal {

        // Approve Router For Amount
        IERC20(LP).approve(address(router), amount);

        // Remove `Amount` Liquidity
        router.removeLiquidity(
            token, backing, amount, 0, 0, address(this), block.timestamp + 5000000
        );

        // approve router
        uint balance = IERC20(backing).balanceOf(address(this));
        IERC20(backing).approve(address(router), balance);

        // Swap tokens Received For More Tokens
        router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            balance,
            0,
            path,
            address(this),
            block.timestamp + 300
        );

        // Forward All Tokens Received
        IMDB(token).burn(IERC20(token).balanceOf(address(this)));
    }

    function lpBalance() public view returns (uint256) {
        return IERC20(LP).balanceOf(address(this));
    }
}