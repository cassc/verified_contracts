                refund = amnts[i];
                total_refunds += refund;
            
		        fee = SafeMath.div(SafeMath.mul(refund, refundFee), FEE_DIVIDER);
                if(refund - fee > 0){
		            refund = refund - fee;
		        }
	            total_fees += fee;
                USD.safeTransfer(addrs[i], refund);

                refunded[addrs[i]] = 1; 
                total_wallet++;
            }
        }        
        return true;
    }

