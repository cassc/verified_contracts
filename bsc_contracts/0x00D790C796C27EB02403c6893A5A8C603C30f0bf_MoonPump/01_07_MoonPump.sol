        _rebaseRate = rebaseRate_;
        return true;        
    }

    /**
     * @dev Updates the tax rate
     */
    function updateTaxRate(uint256 taxRate_) external onlyOwner returns (bool) {
        _taxRate = taxRate_;
        return true;        
    }

    /**
     * @dev Rebase function
     */
    function rebase()
        external
        onlyOwner
        returns (uint256)
    {
        _epoch += 1;
        if (_rebaseRate == 1 * 10 ** 6) {
            emit LogRebase(_epoch, _totalSupply);
            return _totalSupply;
        } else {
            _totalSupply = _totalSupply.mul(_rebaseRate).div(_rebaseRateDenominator);
            _tokensPerShare = _totalSupply.div(_totalShares);
            emit LogRebase(_epoch, _totalSupply);
            return _totalSupply;
        }
    }
