contract RigelLaunchpadNFTsSales is Ownable, ERC1155Holder {

    struct cardDetails {
        address token1;
        address token2;
        uint256 token1Price;
        uint256 token2Price;
        uint256 tokenID;
    }

  IERC1155 public rigelNFT;
  mapping (uint256 => cardDetails) private buyWithToken;
  mapping (uint256 => bool) public sold; 
  mapping (uint256 => uint256[]) public ids;
  event Purchase(address indexed recipient, uint price, uint id);

  constructor(address launchpadNFT) {
    rigelNFT = IERC1155(launchpadNFT); 
  }

    function updateCardDetails(
        uint256[] memory tokenID, 
        address _buyWithOne, 
        address _buyWithTwo, 
        uint256[] memory _token1Price,
        uint256 [] memory _token2Price) external onlyOwner {
        require(tokenID.length == _token1Price.length && _token1Price.length == _token2Price.length, "Invalid length of Array.");
        for (uint256 i = 0; i <= (tokenID.length - 1); i++)  {
            cardDetails storage _purch = buyWithToken[tokenID[i]];
            _purch.token1 = _buyWithOne;
            _purch.token2 = _buyWithTwo; 
            _purch.token1Price = _token1Price[i];
            _purch.token2Price = _token2Price[i];
            _purch.tokenID = tokenID[i];
        }
    }



    function nftPurchaseData(uint256 _tokenID) public view  returns (cardDetails memory card) {
        if (_tokenID <= 10) {
            card =  buyWithToken[1];
        } else if (_tokenID > 10 && _tokenID <= 20) {
            card =  buyWithToken[2];
        } else if (_tokenID > 20 && _tokenID <= 30) {
            card =  buyWithToken[3];
        } else if (_tokenID > 30 && _tokenID <= 55) {
            card =  buyWithToken[4];
        } else if (_tokenID > 55 && _tokenID <= 80) {
            card =  buyWithToken[5];
        } else if (_tokenID > 80 && _tokenID <= 105) {
            card =  buyWithToken[6];
        } else if (_tokenID > 105 && _tokenID <= 405) {
            card =  buyWithToken[7];
        } else if (_tokenID > 405 && _tokenID <= 705) {
            card =  buyWithToken[8];
        } else if (_tokenID > 705 && _tokenID <= 1005) {
            card =  buyWithToken[9];
        } else if (_tokenID > 1005 && _tokenID <= 1505) {
            card =  buyWithToken[10];
        } else if (_tokenID > 1505 && _tokenID <= 2005) {
            card =  buyWithToken[11];
        } else if (_tokenID > 2005 && _tokenID <= 2505) {
            card =  buyWithToken[12];
        }
        return card;
    }



    function buy(uint256 tokenID, address buyWith) external {
        (cardDetails memory card) = nftPurchaseData(tokenID);
        require(buyWith == card.token1 || buyWith == card.token2, "Rigel: Token address Not accepted");
        if(buyWith == card.token1) {
            require(IERC20(card.token1).transferFrom(_msgSender(), address(this), card.token1Price), "Token: Transfer Failed");    
            _trade(tokenID); //swap nft for eth
        }
        if(buyWith == card.token2) {
            require(IERC20(card.token2).transferFrom(_msgSender(), address(this), card.token2Price), "Token: Transfer Failed");    
            _trade(tokenID); //swap nft for eth
        }        
    }

    function _trade(uint _id) internal {
        rigelNFT.safeTransferFrom(address(this), _msgSender(), _id, 1, " ");
        (cardDetails memory card) = nftPurchaseData(_id);
        sold[_id] = true;
        ids[card.tokenID].push(_id);
        emit Purchase(_msgSender(), 1, _id);
    }

    function Withdraw(address recipient, uint256[] memory tokenID, uint256[] memory amount) external onlyOwner {
        rigelNFT.safeBatchTransferFrom(address(this), recipient, tokenID, amount, " "); 
    }

    function EmmergencyWithdraw(address _token, address recipient, uint256 _amt) external onlyOwner {
        IERC20(_token).transfer(recipient, _amt);
    }
}