interface IQuoter{
    
    struct QuoteExactInputSingleParams {
        address tokenIn;
        address tokenOut;
        uint256 amountIn;
        uint24 fee;
        uint160 sqrtPriceLimitX96;
    }

    function quoteExactInputSingle(QuoteExactInputSingleParams memory params)
        external
        returns (
            uint256 amountOut,
            uint160 sqrtPriceX96After,
            uint32 initializedTicksCrossed,
            uint256 gasEstimate
    );
}


contract PriceTool is Ownable {

    using SafeMath for uint256;

    struct V2Params {
        address pair;
        address stable;
    }
    mapping (address => IQuoter.QuoteExactInputSingleParams) public paramsV3;
    mapping (address => V2Params) public parmasV2;

    address public Quoter;

    function setQuoter(address _quoter) public onlyOwner {
        require(_quoter != address(0),"Invalid Address");
        Quoter = _quoter;
    }

    function setParamsV3(address _tokenIn, address _tokenOut, uint24 _fee) public onlyOwner{
        require(_tokenIn != address(0) && _tokenOut != address(0),"Invalid address!");
        uint256 amountIn = 10 ** IERC20(_tokenIn).decimals();
        paramsV3[_tokenIn] = IQuoter.QuoteExactInputSingleParams({
            tokenIn: _tokenIn,
            tokenOut: _tokenOut,
            amountIn: amountIn,
            fee: _fee,
            sqrtPriceLimitX96: 0
        });
    }

    function setParamV2(address _tokenIn, address _stable, address _pair) public onlyOwner{
        require(_tokenIn != address(0) && _stable != address(0) && _pair != address(0),"Invalid address!");
        parmasV2[_tokenIn] = V2Params({
            pair: _pair,
            stable: _stable
        });
    }

    function removeParamV2(address _tokenIn) public onlyOwner{
        require(_tokenIn != address(0),"Invalid address!");
        delete parmasV2[_tokenIn];
    }

    function getPrice(address _token) public returns(uint256){
        if(parmasV2[_token].stable != address(0)){
            return _v2Price(_token);
        }else if (paramsV3[_token].tokenOut != address(0) && Quoter != address(0)){
            return _v3Price(_token);
        }
       return 0;
    }

    function _v3Price(address _token) internal returns(uint256){
        (uint256 amountOut,,,) =  IQuoter(Quoter).quoteExactInputSingle(paramsV3[_token]);
        return amountOut;
    }

    function _v2Price(address _token) internal view returns(uint256){
        
        uint256 stableBalance = IERC20(parmasV2[_token].stable).balanceOf(parmasV2[_token].pair);
        uint256 tokenBalance = IERC20(_token).balanceOf(parmasV2[_token].pair);
        return stableBalance.mul(10 ** IERC20(_token).decimals()).div(tokenBalance);
    }
}