pragma solidity ^0.8.9;

import "@openzeppelin/contracts/governance/Governor.sol";
import "@openzeppelin/contracts/governance/extensions/GovernorSettings.sol";
import "@openzeppelin/contracts/governance/extensions/GovernorCountingSimple.sol";
import "@openzeppelin/contracts/governance/extensions/GovernorVotes.sol";
import "@openzeppelin/contracts/governance/extensions/GovernorVotesQuorumFraction.sol";

contract OPCGovernor is Governor, GovernorSettings, GovernorCountingSimple, GovernorVotes, GovernorVotesQuorumFraction {

    address private _moderator;

    // While OnePunch Coin commitment to community governance is unwavering, in the early stages, 
    // proposal execution will be moderated by the core team. 
    // This is a necessary measure to ensure a fair token distribution and prevent potential misuse by 
    // large token holders. This moderation will protect the community and the integrity of 
    // OnePunch Coin until the token distribution reaches a state that is resistant to manipulation.
    function _requireModerator() internal view {
        require(msg.sender == _moderator, "OPCGovernor: caller is not the moderator");
    }

    modifier onlyRoleOrOpenRole() {
        if(_moderator != address(0)) {
            _requireModerator();
        }
            
        _;
    }

    modifier onlyModerator() {
        _requireModerator();
            
        _;
    }

    constructor(IVotes _token)
        Governor("OPCGovernor")
        GovernorSettings(7200 /* 1 days */, 50400 /* 1 week */, 0)
        GovernorVotes(_token)
        GovernorVotesQuorumFraction(4)
    {
        _moderator = msg.sender;
    }

    // The following functions are overrides required by moderator.
    function cancelByModerator(
        address[] memory targets,
        uint256[] memory values,
        bytes[] memory calldatas,
        bytes32 descriptionHash
    ) external onlyModerator returns (uint256) {
        return _cancel(targets, values, calldatas, descriptionHash);
    }

    function execute(
        address[] memory targets,
        uint256[] memory values,
        bytes[] memory calldatas,
        bytes32 descriptionHash
    ) public payable virtual override onlyRoleOrOpenRole returns (uint256) {
        return super.execute(targets, values, calldatas, descriptionHash);
    }


    // The following functions are overrides required by Solidity.

    function votingDelay()
        public
        view
        override(IGovernor, GovernorSettings)
        returns (uint256)
    {
        return super.votingDelay();
    }

    function votingPeriod()
        public
        view
        override(IGovernor, GovernorSettings)
        returns (uint256)
    {
        return super.votingPeriod();
    }

    function quorum(uint256 blockNumber)
        public
        view
        override(IGovernor, GovernorVotesQuorumFraction)
        returns (uint256)
    {
        return super.quorum(blockNumber);
    }

    function proposalThreshold()
        public
        view
        override(Governor, GovernorSettings)
        returns (uint256)
    {
        return super.proposalThreshold();
    }

    function renounceModerator() external onlyModerator {
        _moderator = address(0);
    }
}