        uint256 holdersFee = amount.mul(taxes.hoders).div(feeDenominator);
        _balances[holdersDividenAddress] = _balances[holdersDividenAddress].add(
            holdersFee
        );
        emit Transfer(sender, holdersDividenAddress, holdersFee);
        amountRec = amountRec.sub(holdersFee);

        uint256 liquidityFee = amount.mul(taxes.liquidity).div(feeDenominator);
        _balances[address(treasury)] = _balances[address(treasury)].add(
            liquidityFee
        );
        emit Transfer(sender, address(treasury), liquidityFee);
        amountRec = amountRec.sub(liquidityFee);

        uint256 stoplossFee = amount.mul(taxes.stoploss).div(feeDenominator);
        _balances[stopLossAddress] = _balances[stopLossAddress].add(
            stoplossFee
        );
        emit Transfer(sender, stopLossAddress, stoplossFee);
        amountRec = amountRec.sub(stoplossFee);

        emit TakeFee(fundFee, burnFee, nftFee, holdersFee, liquidityFee, stoplossFee,block.timestamp);
        return amountRec;
    }

