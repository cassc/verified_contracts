contract Presale is Context, ReentrancyGuard, Ownable {
  using SafeERC20 for IERC20;
  
  // The token being sold
  Token token;

  // Address where funds are collected
  address payable public wallet;

  address[] public holders;

  // How many token units a buyer gets per wei
  uint256 public rate = 10500000000000; // 0.000000000000095 ETH per token

  // Amount of wei raised
  uint256 public weiRaised;

    // Presale start  (unix)
    uint256 public startTime;

    // Presale end timestamp (unix)
    uint256 public endTime;

    // Maximum wei allowed per wallet
    uint256 public maxWeiPerWallet = 1 ether;

    // Presale goal
    uint256 public presaleGoal = 10 ether;

    // Mapping to store the wei contributed per wallet
    mapping(address => uint256) public contributions;
    mapping(address => uint256) public tokensPurchased;

  /**
   * Event for token purchase logging
   * @param purchaser who paid for the tokens
   * @param beneficiary who got the tokens
   * @param value weis paid for purchase
   * @param amount amount of tokens purchased
   */
  event TokenPurchase(
    address indexed purchaser,
    address indexed beneficiary,
    uint256 value,
    uint256 amount
  );

  constructor() public {
    token = Token(0x227B98eC4F14173f9F67c3cEa1578A71DF759B53);
    wallet = payable(0xc5f99eb9b6b17062CAEAaf6be88e215C079BB8E6);
    startTime = 1683561600;
    endTime = 1683820800;
  }

  // -----------------------------------------
  // Presale external interface
  // -----------------------------------------

  /**
   * @dev fallback function ***DO NOT OVERRIDE***
   */
  fallback () external payable {
    buyTokens(_msgSender());
  }

    function setRate(uint256 rate_) public onlyOwner{
        require(rate_ != 0, "Presale: rate is 0");
        rate = rate_;
    }

    function setToken(address token_) public onlyOwner {
        require(token_ != address(0), "Presale: token is the zero address");
        token = Token(token_);
    }

    function updatePresaleTimeframe(uint256 newStartTime, uint256 newEndTime) public onlyOwner {
        require(block.timestamp < startTime, "Presale: Cannot update after start time");
        require(newStartTime < newEndTime, "Presale: Start time must be earlier than end time");

        startTime = newStartTime;
        endTime = newEndTime;
    }

  /**
   * @dev low level token purchase ***DO NOT OVERRIDE***
   * @param _beneficiary Address performing the token purchase
   */
  function buyTokens(address _beneficiary) public payable nonReentrant {
    require(block.timestamp >= startTime && block.timestamp <= endTime, "Presale: Not in the presale period");
    require(weiRaised < presaleGoal, "Presale: Goal already reached");

    uint256 weiAmount = msg.value;
    _preValidatePurchase(_beneficiary, weiAmount);

    // calculate token amount to be created
    uint256 tokens = _getTokenAmount(weiAmount);

    // update state
    weiRaised += weiAmount;
    contributions[_beneficiary] += weiAmount;

    _processPurchase(_beneficiary, tokens);
    emit TokenPurchase(
      _msgSender(),
      _beneficiary,
      weiAmount,
      tokens
    );

    _updatePurchasingState(_beneficiary, weiAmount);

    _forwardFunds();
    _postValidatePurchase(_beneficiary, weiAmount);
  }

  // -----------------------------------------
  // Internal interface (extensible)
  // -----------------------------------------

  /**
   * @dev Validation of an incoming purchase. Use require statements to revert state when conditions are not met. Use super to concatenate validations.
   * @param _beneficiary Address performing the token purchase
   * @param _weiAmount Value in wei involved in the purchase
   */
  function _preValidatePurchase(
    address _beneficiary,
    uint256 _weiAmount
  )
    internal
  {
    require(_beneficiary != address(0), "Presale: beneficiary is the zero address");
    require(_weiAmount != 0, "Presale: weiAmount is 0");
    require(contributions[_beneficiary] + _weiAmount <= maxWeiPerWallet, "Presale: Wallet cap exceeded");
    require(weiRaised + _weiAmount <= presaleGoal, "Presale: Presale goal exceeded");
  }

  /**
   * @dev Validation of an executed purchase. Observe state and use revert statements to undo rollback when valid conditions are not met.
   * @param _beneficiary Address performing the token purchase
   * @param _weiAmount Value in wei involved in the purchase
   */
  function _postValidatePurchase(
    address _beneficiary,
    uint256 _weiAmount
  )
    internal
  {
    // optional override
  }

  /**
   * @dev Source of tokens. Override this method to modify the way in which the Presale ultimately gets and sends its tokens.
   * @param _beneficiary Address performing the token purchase
   * @param _tokenAmount Number of tokens to be emitted
   */
  function _deliverTokens(
    address _beneficiary,
    uint256 _tokenAmount
  )
    internal
  {
    IERC20(address(token)).safeTransfer(_beneficiary, _tokenAmount);
  }

  /**
   * @dev Executed when a purchase has been validated and is ready to be executed. Not necessarily emits/sends tokens.
   * @param _beneficiary Address receiving the tokens
   * @param _tokenAmount Number of tokens to be purchased
   */
  function _processPurchase(
    address _beneficiary,
    uint256 _tokenAmount
  )
    internal
  {
    if (tokensPurchased[_beneficiary] == 0) {
        holders.push(_beneficiary);
    }
    tokensPurchased[_beneficiary] += _tokenAmount;
  }

  /**
   * @dev Override for extensions that require an internal state to check for validity (current user contributions, etc.)
   * @param _beneficiary Address receiving the tokens
   * @param _weiAmount Value in wei involved in the purchase
   */
  function _updatePurchasingState(
    address _beneficiary,
    uint256 _weiAmount
  )
    internal
  {
    // optional override
  }

  /**
   * @dev Override to extend the way in which ether is converted to tokens.
   * @param _weiAmount Value in wei to be converted into tokens
   * @return Number of tokens that can be purchased with the specified _weiAmount
   */
  function _getTokenAmount(uint256 _weiAmount)
    internal view returns (uint256)
  {
    return _weiAmount * rate;
  }

  /**
   * @dev Determines how ETH is stored/forwarded on purchases.
   */
  function _forwardFunds() internal {
    wallet.transfer(msg.value);
  }

  function claimTokens() public {
    require(block.timestamp > endTime, "Presale: presale not finished yet");
    uint256 tokensToClaim = tokensPurchased[msg.sender];
    require(tokensToClaim > 0, "Presale: no tokens to claim");
    
    tokensPurchased[msg.sender] = 0;
    _deliverTokens(msg.sender, tokensToClaim);
  }

  function distributeTokens() public onlyOwner {
    require(block.timestamp > endTime, "Presale: presale not finished yet");
    
    for (uint256 i = 0; i < holders.length; i++) {
        address investor = holders[i];
        uint256 tokensToClaim = tokensPurchased[investor];
        
        if (tokensToClaim > 0) {
        tokensPurchased[investor] = 0;
        _deliverTokens(investor, tokensToClaim);
        }
    }
  }

  function withdraw() public payable onlyOwner {
        (bool success, ) = payable(msg.sender).call{value: address(this).balance}("");
        require(success);
    }

    function returnUnsoldTokens(address to) external onlyOwner {
        uint256 contractTokenBalance = IERC20(address(token)).balanceOf(address(this));
        require(contractTokenBalance > 0, "Presale: no unsold tokens");
        IERC20(address(token)).transfer(to, contractTokenBalance);
    }

    receive() external payable {
    }
}