/**
 * @title A monster-fighting contract for the Mithrilverse.
 * @dev Interacts with MithrilOre.
 * @author Mithrilverse devs.
 * @custom:security-contact [email protected]
 */
contract BattleOfRylheim is Context,
                    Ownable,
                    ERC1155Holder
{
    using Counters for Counters.Counter;

    ///////////////
    // Addresses //
    ///////////////

    /// Address of MithrilOre.
    IGameToken public ore;

    ////////////
    // Battle //
    ////////////

    /// Set at beginning of battle.
    uint256 public startingBattleHealth;
    /// Updated after each fightBattle.
    uint256 public remainingBattleHealth;
    /// Damage caused by account across all battles.
    // address => damage
    mapping(address => uint256) public totalDamageLeaderboard;
    /// Damage caused by account during this battle.
    // address => damage
    mapping(address => uint256) public currentBattleLeaderboard;
    /// Address which caused the most damage this battle.
    address public hero;
    uint256 public heroDamage;
    /// Address which caused the final damage in the prior battle.
    address public priorSlayer;
    /// Incremented by newBattle.
    Counters.Counter private _battleCounter;

    /// Emitted by fightBattle.
    /// @param fighter as address of caller.
    /// @param damage as amount of damage caused.
    /// @param remainingBattleHealth as amount of health remaining.
    event Damage(
        address indexed fighter,
        uint256 indexed damage,
        uint256 indexed remainingBattleHealth
    );

    /// Emitted by checkBattleState.
    /// @param slayer as account which caused the final damage.
    /// @param finalDamage as amount of damage in final fightBattle.
    event BattleWon(
        address indexed slayer,
        uint256 indexed finalDamage
    );

    /// Emitted by newBattle.
    /// @param startingBattleHealth as amount of health in this new battle.
    event NewBattle(
        uint256 indexed startingBattleHealth
    );

    //////////
    // Init //
    //////////

    constructor(
        address _ore
    ) {
        ore = IGameToken(_ore);
        startingBattleHealth = 1000000;
        remainingBattleHealth = 1000000;
    }

    ////////////
    // Battle //
    ////////////

    /// Number of battles fought.
    /// @return amount from Counter.
    function battleCount() external view returns(uint256) {
        return _battleCounter.current();
    }

    /// Caller contributes to battle fight.
    /// @param oreAmount as amount of Ore to burn.
    function fightBattle(uint256 oreAmount) external {
        address account = _msgSender();

        takeAndBurnOre(oreAmount);
        uint256 damage = damageDecider(oreAmount);
        deductDamage(damage);
        updateDamageLeaderboard(account, damage);

        emit Damage(
            account,
            damage,
            remainingBattleHealth
        );

        checkBattleState(account, damage);
    }

    /// Transfer Ore from caller to zero address.
    /// @param oreAmount as amount of Ore to burn.
    function takeAndBurnOre(uint256 oreAmount) private {
        ore.burn(
            _msgSender(),
            0,
            oreAmount
        );
    }

    /// Pseudorandomly determine a multiplier to apply to amount of Ore spent.
    /// @param oreAmount as amount of Ore being multiplied.
    /// @return uint256 as amount of damage to cause.
    function damageDecider(uint256 oreAmount) private view returns(uint256) {
        // Pseudorandomly determine damage.
        bytes32 _hash = keccak256(
            abi.encodePacked(
                block.timestamp,
                block.number,
                remainingBattleHealth,
                oreAmount
            )
        );

        // Multiplier can be 1x - 10x.
        uint256 multiplier = (uint256(_hash) % 10) + 1;
        
        return oreAmount * multiplier;
    }

    /// Update battle health.
    /// @param damage amount of damage to deduct from battle health.
    function deductDamage(uint256 damage) private {
        // Prevent underflow.
        if (damage > remainingBattleHealth)
            damage = remainingBattleHealth;
        
        remainingBattleHealth -= damage;
    }

    /// Update storage tracking damage contributed by accounts.
    /// @param account as address.
    /// @param damage as amount caused in this current fightBattle.
    function updateDamageLeaderboard(address account, uint256 damage) private {
        totalDamageLeaderboard[account] += damage;
        currentBattleLeaderboard[account] += damage;
        if (damage > heroDamage)
            hero = account;
    }

    /// Check to end complete battle and start new battle.
    /// @param account of current fighter.
    /// @param damage caused by current fightBattle.
    function checkBattleState(address account, uint256 damage) private {
        if (remainingBattleHealth == 0) {
            emit BattleWon(
                account,
                damage
            );
            priorSlayer = account;
            newBattle();        
        }
    }

    // Start new battle.
    function newBattle() private {
        _battleCounter.increment();

        // New battle's health should be 2% higher than the previous battle.
        remainingBattleHealth = startingBattleHealth + (startingBattleHealth * 2 / 100);
        startingBattleHealth = remainingBattleHealth;

        emit NewBattle(
            startingBattleHealth
        );
    }
}