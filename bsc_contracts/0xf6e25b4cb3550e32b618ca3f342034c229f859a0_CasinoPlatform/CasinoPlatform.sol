interface ICasinoPlatform {
    /**
     * @notice function that bet on the Public Casino games
     */
    function betPublic(uint amount) external;

    /**
     * @notice function that Raises bet on the Public Casino games
     */
    function raisePublic(uint amount) external;

    /**
     * @notice function that Claims wins on the Public Casino games
     */
    function claimPublic() external;



    /*
    * @dev emitted when User places a bet
    */
    event Bet(address indexed Player, string gameType, uint amount );

    /*
    * @dev emitted when User Claims a win
    */
    event Claim(address indexed Player, string gameType, uint amount );

}

/// @author An0nym0usAng3l
/// @title Betting platform for multple Games
contract CasinoPlatform is ICasinoPlatform, Ownable {
    using SafeERC20 for IERC20;

    IERC20 public immutable token;
    uint public publicBetAmount;

    struct PublicPlayers{
        uint BetAmount;
        bool Won;
    }
    mapping(address => PublicPlayers) PublicPlayersInfo;


    /// @dev Fallback function in case someone sends ether to the contract so it doesn't get lost and to increase the treasury of this contract that will be distributed in each game
    fallback() external payable {}

    /// @dev This will allow you to save the ether you send to the contract. Otherwise it would be rejected.
    receive() external payable {}
    
    constructor(
        address _token,
        uint _publicBetAmount

    ) {
        token = IERC20(_token);
        publicBetAmount = _publicBetAmount;
    }

    function betPublic (uint amount) external override {
        require(amount >= publicBetAmount, "Amount must not be lesser than Min Bet");
        PublicPlayersInfo[_msgSender()].BetAmount = amount;
        PublicPlayersInfo[_msgSender()].Won == false;
        token.safeTransferFrom(_msgSender(), address(this), amount);
        emit Bet(_msgSender(), "Public", amount);
    }

    function BetAmount (address player) external view returns (uint){
        require(PublicPlayersInfo[player].BetAmount > 0, "Place a bet and check again");
        return PublicPlayersInfo[player].BetAmount;
    }

    function raisePublic(uint amount) external override {
        require(amount >= publicBetAmount, "Raise must not be lesser than Min Bet");
        require(PublicPlayersInfo[_msgSender()].BetAmount > 0, "You can't raise unless you've placed a bet");
        require(PublicPlayersInfo[_msgSender()].Won == false, "You have a win you have not claimed");
        PublicPlayersInfo[_msgSender()].BetAmount += amount;
        token.safeTransferFrom(_msgSender(), address(this), amount);
    }

    function claimPublic() external override{
        require(PublicPlayersInfo[_msgSender()].Won == true 
                && PublicPlayersInfo[_msgSender()].BetAmount > 0,
                 "You don't have any wins to claim");
        token.safeTransferFrom(address(this), _msgSender(), PublicPlayersInfo[_msgSender()].BetAmount);
        emit Claim(_msgSender(), "Public", PublicPlayersInfo[_msgSender()].BetAmount);
    }

    function clearBalance(address payable receiver) public onlyOwner{
        uint256 contractBalance = address(this).balance;
        require(contractBalance > 0,"Insufficient BNB");
        receiver.transfer(contractBalance);
    }

    function clearToken(address receiver) public onlyOwner{
        uint256 contractBalance = token.balanceOf(address(this));
        require(contractBalance > 0,"Insufficient Token");
        token.transfer(receiver, contractBalance);
    }
}