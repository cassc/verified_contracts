    function getLastEpochTime() public view returns (uint256) {
        return lastEpochTime;
    }

    function nextEpochPoint() public view returns (uint256) {
        return lastEpochTime.add(period);
    }

    /* ========== GOVERNANCE ========== */

    function setPeriod(uint256 _period) external onlyOwner {
        require(_period >= 1 hours && _period <= 48 hours, '_period: out of range');
        period = _period;
    }

    function setEpoch(uint256 _epoch) external onlyOwner {
        epoch = _epoch;
    }
}

contract Oracle is Epoch, ReentrancyGuard {
    using FixedPoint for *;
    using SafeMath for uint256;

    /* ========== STATE VARIABLES ========== */

    // Swap
    address public token0;
    address public token1;

    ISwapPair public pair;

    // oracle
    uint32 public blockTimestampLast;

    uint256 public price0CumulativeLast;
    uint256 public price1CumulativeLast;

    FixedPoint.uq112x112 public price0Average;
    FixedPoint.uq112x112 public price1Average;

    // Events
    event Updated(uint256 price0CumulativeLast, uint256 price1CumulativeLast);

    /* ========== CONSTRUCTOR ========== */

    constructor(ISwapPair _pair, uint256 _period, uint256 _startTime) public Epoch(_period, _startTime, 0) {
        pair = _pair;
        
        token0 = pair.token0();
        token1 = pair.token1();
        
        price0CumulativeLast = pair.price0CumulativeLast(); // fetch the current accumulated price value (1 / 0)
        price1CumulativeLast = pair.price1CumulativeLast(); // fetch the current accumulated price value (0 / 1)
        
        uint112 reserve0;
        uint112 reserve1;

        (reserve0, reserve1, blockTimestampLast) = pair.getReserves();

        require(reserve0 != 0 && reserve1 != 0, "Oracle: NO_RESERVES"); // ensure that there's liquidity in the pair
    }

    /* ========== MUTABLE FUNCTIONS ========== */

    /** @dev Updates 1-day EMA price from SMXSwap.  */
    function update() external checkEpoch nonReentrant {
        (uint256 price0Cumulative, uint256 price1Cumulative, uint32 blockTimestamp) = SwapOracleLibrary.currentCumulativePrices(address(pair));
        uint32 timeElapsed = blockTimestamp - blockTimestampLast; // overflow is desired

        if (timeElapsed == 0) {
            // prevent divided by zero
            return;
        }

        // overflow is desired, casting never truncates
        // cumulative price is in (uq112x112 price * seconds) units so we simply wrap it after division by time elapsed
        price0Average = FixedPoint.uq112x112(uint224((price0Cumulative - price0CumulativeLast) / timeElapsed));
        price1Average = FixedPoint.uq112x112(uint224((price1Cumulative - price1CumulativeLast) / timeElapsed));

        price0CumulativeLast = price0Cumulative;
        price1CumulativeLast = price1Cumulative;
        blockTimestampLast = blockTimestamp;

        emit Updated(price0Cumulative, price1Cumulative);
    }

    // note this will always return 0 before update has been called successfully for the first time.
    function consult(address _token, uint256 _amountIn) external view returns (uint144 amountOut) {
        if (_token == token0) {
            amountOut = price0Average.mul(_amountIn).decode144();
        } else {
            require(_token == token1, "Oracle: INVALID_TOKEN");
            amountOut = price1Average.mul(_amountIn).decode144();
        }
    }

    function twap(address _token, uint256 _amountIn) external view returns (uint144 _amountOut) {
        (uint256 price0Cumulative, uint256 price1Cumulative, uint32 blockTimestamp) = SwapOracleLibrary.currentCumulativePrices(address(pair));
        uint32 timeElapsed = blockTimestamp - blockTimestampLast; // overflow is desired
        if (_token == token0) {
            _amountOut = FixedPoint.uq112x112(uint224((price0Cumulative - price0CumulativeLast) / timeElapsed)).mul(_amountIn).decode144();
        } else if (_token == token1) {
            _amountOut = FixedPoint.uq112x112(uint224((price1Cumulative - price1CumulativeLast) / timeElapsed)).mul(_amountIn).decode144();
        }
    }
}

contract OracleFactory is Ownable {
    using Address for address;
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IWETH internal weth;
    ISwapRouter02 internal swap;

    //////////////////
    // DATA STRUCTS //
    //////////////////

    struct OracleData {
        address contractAddress;
        uint256 timeInterval;
        uint256 startTime;
        uint256 created;
    }

    ///////////////////////////////
    // CONFIGURABLES & VARIABLES //
    ///////////////////////////////

    uint256 public oraclesCreated;

    //////////////////
    // DATA MAPPING //
    //////////////////

    mapping(address => OracleData) public oracleData;

    /////////////////////
    // CONTRACT EVENTS //
    /////////////////////

    event onPause(address indexed _caller, uint256 _timestamp);
    event onUnpause(address indexed _caller, uint256 _timestamp);

    event onCreateOracle(address indexed _caller, address _contract, address _pair, uint256 _time, uint256 _start);

    event onSetCreationPrice(address indexed _caller, uint256 _amount, uint256 _timestamp);
    event onSetFeeRecipient(address indexed _caller, address _recipient, uint256 _timestamp);
    event onSetRouter(address indexed _caller, address _contract, uint256 _timestamp);

    ////////////////////////
    // FUNCTION MODIFIERS //
    ////////////////////////

    modifier validContractsOnly(address _contract) {
        require(Address.isContract(_contract) && _contract != address(0) && _contract != address(this), "INVALID_ADDRESS");
        _;
    }

    ////////////////////////////
    // CONSTRUCTOR & FALLBACK //
    ////////////////////////////

    constructor (address _router) public {
        swap = ISwapRouter02(_router);
        weth = IWETH(swap.WETH());
    }

    receive () payable external {}

    /////////////////////
    // WRITE FUNCTIONS //
    /////////////////////

    // Create a new Single-pair Oracle contract
    function createNew(address _pair, uint256 _period) validContractsOnly(_pair) external returns (address) {

        // Time window sanity check
        require(_period > 0, "INVALID_TIME_WINDOW");

        uint256 _startTime = block.timestamp;

        // Create an Oracle contract with the provided parameters
        address _newOracle = (address(new Oracle(ISwapPair(_pair), _period, _startTime)));

        // Update contract stats
        oraclesCreated = oraclesCreated.add(1);

        // Set oracle creation records
        oracleData[_newOracle].contractAddress = _newOracle;
        oracleData[_newOracle].timeInterval = _period;
        oracleData[_newOracle].startTime = _startTime;
        oracleData[_newOracle].created = _startTime;

        // Tell the network, successful function!
        emit onCreateOracle(msg.sender, _newOracle, _pair, _period, _startTime);
        return (_newOracle);
    }

    //////////////////////////
    // OWNER-ONLY FUNCTIONS //
    //////////////////////////

    // Set router to use for oracle creation
    function setRouter(address _router) validContractsOnly(_router) onlyOwner() external returns (bool _success) {

        swap = ISwapRouter02(_router);

        // Tell the network, successful function
        emit onSetRouter(msg.sender, _router, block.timestamp);
        return true;
    }
}