// File: contracts/medal/TaskClaim.sol

pragma solidity ^0.8.0;

/**
 * @title TaskClaim
 * @author SecondLive Protocol
 *
 * Campaign contract 
    that allows privileged DAOs to initiate campaigns for members to 
    claim SecondLiveNFTs.
 */
contract TaskClaim is EIP712, Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    bool private initialized;

    struct CampaignFeeConfig {
        address erc20; // Address of token asset if required
        uint256 erc20Fee; // Amount of token if required
        uint256 platformFee; // Amount of fee for using the service if applicable
    }

    address public signer;
    address public campaignSetter;
    address payable public treasuryManager;
    ISecondLiveBean bean;

    mapping(uint256 => bool) public isClaimed;
    mapping(uint256 => uint256) public numClaimed;
    mapping(uint256 => uint256) public caps; // zero is no cap
    mapping(uint256 => CampaignFeeConfig) public campaignFeeConfigs;

    event UpdateManager(
        address signer,
        address campaignSetter,
        address treasuryManager
    );
    event EventActivateCampaign(
        uint256 pid,
        address erc20,
        uint256 erc20Fee,
        uint256 platformFee,
        uint256 cap
    );
    event EventClaim(
        uint256 nftID,
        uint256 _pid,
        uint256 _dummyId,
        address _nft,
        address _mintTo,
        uint256 _beanAmount
    );

    function initialize(
        address _owner,
        address _signer,
        address _campaignSetter,
        address payable _treasuryManager,
        ISecondLiveBean _bean
    ) external {
        require(!initialized, "initialize: Already initialized!");
        _transferOwnership(_owner);
        eip712Initialize("SecondLive", "1.0.0");
        signer = _signer;
        campaignSetter = _campaignSetter;
        treasuryManager = _treasuryManager;
        bean = _bean;
        initialized = true;
    }

    function claimHash(
        uint256 _pid,
        address _nft,
        uint256 _dummyId,
        address _to,
        uint256 _rule,
        uint256 _quality,
        uint256 _format,
        uint256 _extra,
        uint256 _beanAmount
    ) internal view returns (bytes32) {
        return
            _hashTypedDataV4(
                keccak256(
                    abi.encode(
                        keccak256(
                            "Claim(uint256 pid,address claimNFT,uint256 dummyId,address mintTo,uint256 rule,uint256 quality,uint256 format,uint256 extra,uint256 beanAmount)"
                        ),
                        _pid,
                        _nft,
                        _dummyId,
                        _to,
                        _rule,
                        _quality,
                        _format,
                        _extra,
                        _beanAmount
                    )
                )
            );
    }

    function verifySignature(
        bytes32 hash,
        bytes calldata signature
    ) internal view returns (bool) {
        return ECDSA.recover(hash, signature) == signer;
    }

    function setManager(
        address _signer,
        address _campaignSetter,
        address payable _treasuryManager
    ) external onlyOwner {
        signer = _signer;
        campaignSetter = _campaignSetter;
        treasuryManager = _treasuryManager;
        emit UpdateManager(_signer, _campaignSetter, _treasuryManager);
    }

    function activateCampaign(
        uint256 _pid,
        address _erc20,
        uint256 _erc20Fee,
        uint256 _platformFee,
        uint256 cap
    ) external {
        require(msg.sender == campaignSetter, "Only campaignSetter can call");
        campaignFeeConfigs[_pid] = CampaignFeeConfig(
            _erc20,
            _erc20Fee,
            _platformFee
        );
        caps[_pid] = cap;
        emit EventActivateCampaign(_pid, _erc20, _erc20Fee, _platformFee, cap);
    }

    function claim(
        uint256 _pid,
        address _nft,
        uint256 _dummyId,
        address _mintTo,
        uint256 _rule,
        uint256 _quality,
        uint256 _format,
        uint256 _extra,
        uint256 _beanAmount,
        bytes calldata _signature
    ) external nonReentrant returns (uint256) {
        require(!isClaimed[_dummyId], "Already Claimed!");

        if (caps[_pid] != 0) {
            require(numClaimed[_pid] < caps[_pid], "Claim End!");
        }
        require(
            verifySignature(
                claimHash(
                    _pid,
                    _nft,
                    _dummyId,
                    _mintTo,
                    _rule,
                    _quality,
                    _format,
                    _extra,
                    _beanAmount
                ),
                _signature
            ),
            "Invalid signature"
        );
        isClaimed[_dummyId] = true;

        ISecondLiveEditor.Attribute memory _attribute = ISecondLiveEditor
            .Attribute(_rule, _quality, _format, _extra);

        uint256 nftID_ = ISecondLiveEditor(_nft).mint(msg.sender, _attribute);

        numClaimed[_pid]++;
        _payFees(_pid, 1);

        if (_beanAmount > 0) {
            require(_beanAmount <= (1000 * 1e18), "out of gauge");
            bean.mint(msg.sender, _beanAmount);
        }

        uint256 pid_ = _pid;
        uint256 dummyId_ = _dummyId;
        address nft_ = _nft;
        address mintTo_ = _mintTo;
        uint256 beanAmount_ = _beanAmount;
        emit EventClaim(nftID_, pid_, dummyId_, nft_, mintTo_, beanAmount_);

        return nftID_;
    }

    function _payFees(uint256 _pid, uint256 amount) internal {
        require(amount > 0, "Must mint more than 0");
        CampaignFeeConfig memory feeConf = campaignFeeConfigs[_pid];
        // 1. pay platformFee if needed
        if (feeConf.platformFee > 0) {
            require(
                msg.value >= feeConf.platformFee.mul(amount),
                "Insufficient Payment"
            );
            treasuryManager.transfer(msg.value);
        }
        // 2. pay erc20_fee if needed
        if (feeConf.erc20Fee > 0) {
            // user wallet transfer <erc20> of <feeConf.erc20Fee> to <this contract>.
            require(
                IERC20(feeConf.erc20).transferFrom(
                    msg.sender,
                    treasuryManager,
                    feeConf.erc20Fee.mul(amount)
                ),
                "Transfer erc20Fee failed"
            );
        }
    }

    receive() external payable {}
}