pragma solidity 0.8.16;

interface IFluxOracle {
  enum OracleType {
    UNINITIALIZED,
    HARDCODED,
    TOKENIZED_RWA,
    CHAINLINK
  }

  function getUnderlyingPrice(address fToken) external view returns (uint256);

  function setFTokenToOracleType(
    address fToken,
    OracleType oracleType
  ) external;

  function setHardcodedPrice(address fToken, uint256 price) external;

  function setFTokenToRWAOracle(address fToken, address rwaOracle) external;

  function setFTokenToChainlinkOracle(
    address fToken,
    address newChainlinkOracle,
    uint256 maxChainlinkOracleTimeDelay
  ) external;
}