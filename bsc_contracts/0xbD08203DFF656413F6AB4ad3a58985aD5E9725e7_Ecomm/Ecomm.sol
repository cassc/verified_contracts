    function setBurnRate(uint256 _percentage) public onlyOwner {
        burnPercentage = _percentage;
    }

    function setWbnb(address _wbnb) public onlyOwner {
        wBnb = _wbnb;
    }


    function setDiscountNft(address _nft) public onlyOwner {
        discountNft = _nft;
    }

   function updateUniswapV2Router(address newAddress) public onlyOwner {
        require(newAddress != address(uniswapV2Router), "GForce: The router already has that address");

        uniswapV2Router = IUniswapV2Router02(newAddress);
    }
    


    function getCurrencyAgainstStableRate(string calldata _itemId)  public view returns(uint256) {
        Item memory item = items[_itemId];
        address[] memory path = new address[](2);
        path[0] = wBnb;
        path[1] = stableCurrency;

        uint256 rateInBnb = uniswapV2Router.getAmountsOut(1000000000000000000, path)[1];

        address[] memory path2 = new address[](2);
        path2[0] = currency;
        path2[1] = wBnb;

        uint256 currencyRate = uniswapV2Router.getAmountsOut(1000000000000000000, path2)[1];

        return currencyRate.mul(rateInBnb).div(1e18);
    }

    function hasDiscount(address caller) public view returns (bool) {
        bool withDiscount = false;
        if (IERC721(discountNft).balanceOf(caller) > 0) {
            withDiscount = true;
        }
        return withDiscount;
    }

    function getCurrencyAmountNeeded(string calldata _itemId, bool _withDiscount)  public view returns(uint256) {
        Item memory item = items[_itemId];
 
        uint256 rate = item.priceInUsd.mul(1e18).mul(1e18).div(getCurrencyAgainstStableRate(_itemId));

      
        if (_withDiscount) {
            return rate.mul(100-item.discountPercentage).div(100);
        }

        return rate;
    }

    function addItem(string calldata _itemId, string calldata _name, string calldata _description, uint256 _discountPercentage, uint256 _priceInUsd) external onlyOwner {
         items[_itemId] = Item({
            name: _name,
            description: _description,
            priceInUsd: _priceInUsd,
            discountPercentage: _discountPercentage
          });

          allItems.push(_itemId);
    }

    function makePayment(string calldata _orderId, string calldata _itemId) external {
        require(orders[_orderId].amount == 0, "Has already made payment");
      
        bool withDiscount = hasDiscount(msg.sender);

        uint256 rate = getCurrencyAmountNeeded(_itemId,withDiscount);
         require(rate > 0, "Amount has to be more than 0");
        
          IERC20(currency).transferFrom(msg.sender,address(this), rate);
          orders[_orderId] = Order({
            currency: IERC20(currency),
            amount: rate,
            paidBy: msg.sender,
            refunded: false
          });

            if (burnPercentage > 0) {
                uint256 burnAmount = rate.mul(burnPercentage).div(10000);
                IERC20(currency).transfer(0x000000000000000000000000000000000000dEaD, burnAmount);
            }

            emit ItemPurchased(msg.sender, _orderId, _itemId, rate);
    }

    function refundPayment( string calldata _orderId) external onlyOwner {
        Order storage order = orders[_orderId];

        require(!order.refunded, "Has refunded already");
       // order.currency.approve(msg.sender, order.amount);
        order.currency.transfer(order.paidBy, order.amount);
        order.refunded = true;

        emit ItemRefunded(msg.sender, _orderId, order.amount);
    }


  function withdraw(IERC20 _currency) external onlyOwner {
        _currency.transfer(msg.sender,  _currency.balanceOf(address(this)));
    }

  
 
