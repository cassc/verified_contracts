contract Hoppa is Context, Ownable {
  
    using SafeMath for uint256;

    address public tokenAddress = 0x27424eE307488cA414f430b84A10483344E6d80a;
    address public routerAddress = 0x10ED43C718714eb63d5aA57B78B54704E256024E;

    IUniswapV2Router02 private uniswapV2Router;

    uint256 public tokenAmount = 1000000000000000000;
    uint256 public cooldownPeriod = 48 hours;
    
    mapping(address => uint256) expireTime;
  
    event SetTokenAddress(address newTokenContract);
    event Withdraw(uint256 amount);
    event BuyTokens(address donatedBy, uint256 amount);
    event SetRouterAddress(address newRouterAddress);
    event SetAmountAndCooldown(uint256 amount, uint256 cooldownPeriodInSeconds);
  
    constructor() public payable {
        // BSC MainNet, Pancakeswap Router
        uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    }
 
    function setTokenAddress(address newTokenContract) external onlyOwner() {
        tokenAddress = newTokenContract;

        emit SetTokenAddress(tokenAddress);
    }

    function setRouterAddress(address newRouterAddress) external onlyOwner() {
        routerAddress = newRouterAddress;
        uniswapV2Router = IUniswapV2Router02(routerAddress);

        emit SetRouterAddress(routerAddress);
    }

    // get some ra8bit from the faucet and update the timer
    function getFreeRa8bit() external {
        require( canWithdraw(msg.sender), "On cooldown");

        uint256 amount = IERC20(tokenAddress).balanceOf(address(this));
        require( amount >= tokenAmount , "Faucet needs to be filled");

        IERC20(tokenAddress).transfer( msg.sender , tokenAmount);

        expireTime [ msg.sender ] = block.timestamp.add( cooldownPeriod );

        emit Withdraw(tokenAmount);
    }
    
    // test cooldown period
    function canWithdraw(address addr) public view returns (bool) {
        if( expireTime[ addr ] == 0 )
            return true;
        if( block.timestamp >= expireTime[ addr ] ) 
            return true;
        return false;
    }

    // return time remaining
    function getRemainingCooldown(address addr) public view returns (uint256) {
        if( block.timestamp < expireTime[ addr ] ) 
            return expireTime[ addr ] - block.timestamp;

        return 0;
    }

    // configure giveaway amount and cooldown timer
    function setAmountAndCooldown(uint256 amount, uint256 coolDownPeriodInSeconds) external onlyOwner {        
        tokenAmount = amount;
        cooldownPeriod = coolDownPeriodInSeconds;
        emit SetAmountAndCooldown( tokenAmount, cooldownPeriod );
    }

    // any BNB sent to the contract executes a market buy order and puts the token in the faucet
    function buyTokenWithBNB() public payable {
        uint256 amount = msg.value;
        address donatedBy = msg.sender;
        
        require(amount > 0);

        address[] memory path = new address[](2);
        path[0] = uniswapV2Router.WETH();
        path[1] = tokenAddress;

        uniswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{
            value: amount}(0, path, address(this), block.timestamp+60);

        emit BuyTokens(donatedBy, amount);
    }

    receive() external payable {
        buyTokenWithBNB();
    }
    
}