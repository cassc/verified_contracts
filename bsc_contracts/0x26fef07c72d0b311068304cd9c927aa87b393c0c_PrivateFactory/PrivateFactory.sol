  EnumerableSet.AddressSet private currencies;

  event PoolCreated(address indexed owner, address indexed pool);
  event ImplementationChanged(address oldImplementation, address newImplementation);
  event ImplementationSetterChanged(address addr);


  modifier feePaid() {
    require(msg.value >= fixedEthFee, "FixedFee");
    _;
  }

  constructor(
    address _poolManager, 
    address _pinkLock,
    address _feeTo,
    address _implementationSetter,
    address _poolImplementation,
    address _whiteListImplementation,
    address[] memory _routers,
    address[] memory _currencies,
    uint256 _fixedEthFee
  ) {
    poolManager = IPrivateManager(_poolManager);
    pinkLockAddr = _pinkLock;
    feeToAddr = _feeTo;
    implementationSetter = _implementationSetter;
    poolImplementation = _poolImplementation;
    whiteListImplementation = _whiteListImplementation;
    for(uint256 i =0; i< _routers.length; i++) {
      routers.add(_routers[i]);
    }
    for(uint256 i =0; i< _currencies.length; i++) {
      currencies.add(_currencies[i]);
    }

    fixedEthFee = _fixedEthFee;

  }

  receive() external payable {}

  function createPool(
    address _owner,
    address _router,
    PrivateStorage.PoolSettings memory _poolSettings,
    PrivateStorage.OwnerVestingSettings memory _ownerVestingSettings,
    PrivateStorage.ContributorVestingSettings memory _contributorVestingSettings,
    uint256 _publicSaleStartTime,
    uint8 _whiteListType,
    uint8 _refundType,
    string memory _poolDetails
  ) payable external feePaid override returns(address pool) {
    // require(routers.contains(_router), "router not supported");
    // require(currencies.contains(_poolSettings.currency), "currency not supported");

    pool = Clones.clone(poolImplementation);
    address whiteList = Clones.clone(whiteListImplementation);

    IPrivatePool(pool).initialize(
      _poolSettings,
      _router,
      _owner,
      whiteList,
      _publicSaleStartTime,
      _whiteListType,
      _refundType,
      _poolDetails
    );

    IPrivatePool(pool).initializeOwnerVesting(
      _ownerVestingSettings
    );

    IPrivatePool(pool).initializeContributorVesting(
      _contributorVestingSettings
    );

    payable(feeToAddr).transfer(msg.value);

    uint256 _totalNeedToken = calculateTotalToken(
      _poolSettings, 
      _ownerVestingSettings.totalVestingTokens
    );
    IERC20(_poolSettings.token).safeTransferFrom(msg.sender, address(pool), _totalNeedToken);

    poolManager.registerPool(
      address(pool), 
      _poolSettings.token, 
      _owner, 
      IPrivatePool(pool).version()
    );
    emit PoolCreated(msg.sender, pool);
  }

  function calculateTotalToken(
    PrivateStorage.PoolSettings memory _poolSettings,
    uint256 _totalVestingTokens
  ) private view returns(uint256 totalNeedToken) {
    uint8 tokenDecimals = IERC20(_poolSettings.token).decimals();
    uint256 totalSellingAmount = _poolSettings.hardCap.mul(_poolSettings.rate).mul(10 ** tokenDecimals).div(10**18);
   
    totalNeedToken = totalSellingAmount + _totalVestingTokens;
  }

