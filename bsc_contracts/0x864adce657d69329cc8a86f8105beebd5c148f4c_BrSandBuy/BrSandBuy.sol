    event SandBuy(address indexed buyer, uint256 indexed brNum);

    address public br;

    constructor(address _brToken) {

        br = _brToken;

    }

    function buy(uint256 num) public payable {
        require(num > 0 && (num % 1000000) == 0, 'ERR: br num');

        require(IERC20(br).transferFrom(_msgSender(), address(this), num), "ERR_INSUFFICIENT_BR_AMOUNT");

        emit SandBuy(_msgSender(), num);

    }

    function withdraw(address to, uint256 amount) external onlyOwner {
        payable(to).transfer(amount);
    }

    function withdrawToken(address _token, address to, uint256 amount) external onlyOwner {
        IERC20(_token).transfer(to, amount);
    }

    receive() external payable {}

