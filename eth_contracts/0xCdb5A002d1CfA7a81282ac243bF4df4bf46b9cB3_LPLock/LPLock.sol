/**
 * @dev A token holder contract that will allow a beneficiary to extract the
 * tokens after a given release time.
 *
 * Useful for simple vesting schedules like "advisors get all of their tokens
 * after 1 year".
 */
contract LPLock {
    using SafeMath for uint256;
    using Address for address;
    using SafeERC20 for IERC20;

    address owner;

    // ERC20 basic token contract which is hold
    IERC20 public pair = IERC20(0x0000000000000000000000000000000000000000);
    

    // beneficiary of tokens after they are released
    address private _beneficiary;

    // timestamp when token release is enabled
    uint256 private _releaseTime;

    bool private _lockEnable;
    
    mapping(address => bool) admin;


    modifier onlyPermit(){
        require(msg.sender == owner || admin[msg.sender], "Require only permit");
        _;
    }
    
    modifier onlyOwner() {
        require(msg.sender == owner, "Require only owner");
        _;
    }

    constructor ()  {
        owner = msg.sender;
    }

    function updateOwner(address ownerAddr_) public onlyOwner{
        require(ownerAddr_ != address(0), "Require owner address can not be zero");
        owner = ownerAddr_;
    }
    
    function updateAdmin(address newAdmin, bool status) public onlyOwner{
        admin[newAdmin] = status;
    }

    function updateReleaseTime(uint256 day_) public onlyPermit{
        require(!_lockEnable, "timeLock has enabled");
        
        _releaseTime = block.timestamp.add(day_.mul(86400));
    }

    function updatePairAddress(address pairAddr_) public onlyPermit{
        require(pairAddr_!= address(0), "ERROR: address 0 not permitted");
        pair = IERC20(pairAddr_);
    }

    function updateBeneficiary(address beneficiary_) public onlyPermit{
        _beneficiary = beneficiary_;
    }

    function updateEnableTimeLock() public onlyPermit{
        require(!_lockEnable, "ERROR: lock has enabled.");
        _lockEnable = true;
    }

    /**
     * @return the time when the tokens are released.
     */
    function releaseTime() public view returns (uint256) {
        return _releaseTime;
    }

    /**
     * @return the days when the tokens are released.
     */
    function releaseDay() public view returns (uint256){
        if(block.timestamp <= releaseTime()){
            return releaseTime().sub(block.timestamp).div(86400);
        }
        return 0;
    }

    /**
     * @notice Transfers tokens held by timeLock to beneficiary.
     */
    function release() public onlyPermit{
        require(block.timestamp >= releaseTime(), "current timestamp is greater than release timestamp");

        //not control price if time lock not enabled
        if(_lockEnable){            
            pair.safeTransfer(_beneficiary, pair.balanceOf(address(this)));
        }else{
            //used for testing, and it is invalid after lock enabled
            pair.safeTransfer(_beneficiary, pair.balanceOf(address(this)));
        }
    }
}