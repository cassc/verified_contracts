    uint256 adjustedPrice = (uint256(price)).mul(10**10);
    return ((ticketPrice).mul(10**18)).div(adjustedPrice);
}


function buy(uint _count) public payable whenNotPaused returns (uint256) {
    require(msg.value >= ((_count).mul(getTicketFee()).sub(1232132345321) ),"not enough payment the price for 1 ticket is $5");
    require(block.timestamp < ((nextDraw).sub(50)), "sale is suspended during draw please wait");
    uint256 localCouter = ticketSerialCounter;
    ticketSerialCounter = (ticketSerialCounter).add(_count);
    for(uint i=localCouter;i<ticketSerialCounter;i++){
    serialToAddress[i] = payable(msg.sender);
    }
    emit ticketBought( msg.sender,ticketSerialCounter );
    treasury = (treasury).add(msg.value);
    ticketsSold = (ticketsSold).add(_count);
    if(isDrawended){
        myTickets[msg.sender]=_count;
        isDrawended=false;
    }else{
     myTickets[msg.sender]=(myTickets[msg.sender]).add(_count);

    }
    return _count;
}


function draw() external whenNotPaused returns(uint256) {
require(block.timestamp >= nextDraw,"not yet draw time");
require(isDrawn == false,"is already drawn");
isDrawended=false;
if(ticketSerialCounter <= 0){
    nextDraw = (block.timestamp).add(drawInterval);
   for(uint i=0;i < ticketSerialCounter;i++){
    serialToAddress[i] = payable(address(0));
    isDrawended=true;
}
return 0;
}
isDrawOngoing=true;
isDrawn = true;
requestId = COORDINATOR.requestRandomWords(keyHash,subscriptionId,requestConfirmations,callbackGasLimit,numWords);
