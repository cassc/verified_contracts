    }

    /**
     * @dev                        Sets the deadline of a transaction in seconds
     * @param time_allowed_in_secs Number of seconds that a transaction can be processed
     */
    function setDeadline(uint256 time_allowed_in_secs) external {
        DEADLINE = time_allowed_in_secs;
    }

    /**
     * @dev            Returns the static MAX_INT value
     * @return uint256 Static MAX_INT variable
     */
    function getMaxInt() external view returns (uint256) {
        return MAX_INT;
    }

    /**
     * @dev           Updates the MAX_INT parameter in the contract
     * @param max_int Value to be updated for MAX_INT
     */
    function setMaxInt(uint256 max_int) external {
        MAX_INT = max_int;
    }

    /**
     * @dev                                          Initiates the FlashLoan
     * @param _amount                                The amount that we are goint to take FlashLoan & trade with
     * @param path                                   List of addresses of each coin in the arbitrage path
     * @param dummy_coin_for_flashloan               Dummy coin address to construct a flashloan pair
     * @param allowSwapSupportingFeeOnTransferTokens This is a boolean used to say, use the function swapExactTokensForTokensSupportingFeeOnTransferTokens() which allows tokens that include transfer fees
     */
    function startArbitrage(uint256 _amount, address[] memory path, address dummy_coin_for_flashloan, bool allowSwapSupportingFeeOnTransferTokens) external {
        // Approving the tokens and the maximum value they can trade
        for (uint256 i = 0; i < path.length-1; ++i)
            IERC20(path[i]).safeApprove(address(PANCAKE_ROUTER), MAX_INT);
        
        // Get the Factory Pair address of flashloan_coin/dummy_coin
        address pair = IUniswapV2Factory(PANCAKE_FACTORY).getPair(path[0], dummy_coin_for_flashloan);
        require(pair != address(0), "Pool does not exist");

        // Figure out which token (0 or 1) has the amount and assign
        address token0 = IUniswapV2Pair(pair).token0();
        address token1 = IUniswapV2Pair(pair).token1();
        uint256 amount_0_Out = path[0] == token0 ? _amount : 0;
        uint256 amount_1_Out = path[0] == token1 ? _amount : 0;

        // Passing data as bytes so that the 'swap' function knows it is a flashloan
        bytes memory data = abi.encode(_amount, msg.sender, path, allowSwapSupportingFeeOnTransferTokens);

        // Execute the initial swap to get the loan
        IUniswapV2Pair(pair).swap(amount_0_Out, amount_1_Out, address(this), data);
    }

    /**
     * @dev            Executes the trade, pays ourself and repays the FlashLoan
     *                 This function is called by the pair that we take FlashLoan for, from the startArbitrage function
     * @param _sender  This contract address (i.e., FlashSwap contract)
     * @param _amount0 Amount of 1st coin in the pair that we have taken FlashLoan for
     * @param _amount1 Amount of 2st coin in the pair that we have taken FlashLoan for
     * @param _data    Encoded data that contains initial amount, our wallet address, arbitarge path and allowSwapSupportingFeeOnTransferTokens
     */
    function pancakeCall(address _sender, uint256 _amount0, uint256 _amount1, bytes calldata _data) external {
        // Ensure this request came from the contract
        address token0 = IUniswapV2Pair(msg.sender).token0();
        address token1 = IUniswapV2Pair(msg.sender).token1();
        address pair = IUniswapV2Factory(PANCAKE_FACTORY).getPair(token0, token1);
        require(msg.sender == pair, "The sender needs to match the pair");
        require(_sender == address(this), "Sender should match this contract");

        // Decode data for calculating the repayment
        (uint256 amount, address my_address, address[] memory path, bool allowSwapSupportingFeeOnTransferTokens) = abi.decode(_data, (uint256, address, address[], bool));

        // Calculate the amount to repay at the end
        uint256 fee = ((amount * 3) / 997) + 1;
        uint256 amount_to_repay = amount + fee;

        // Assign loan amount
        uint256 loan_amount = _amount0 > 0 ? _amount0 : _amount1;

        // Executes the arbitrage & checks if it is profitable
        uint256 balance_before = getBalanceOfToken(path[0]);
        if (allowSwapSupportingFeeOnTransferTokens == true) {
            IUniswapV2Router02(PANCAKE_ROUTER).swapExactTokensForTokensSupportingFeeOnTransferTokens(
                loan_amount, // amountIn
                amount_to_repay, // amountOutMin
                path, // path
                address(this), // to address
                block.timestamp + DEADLINE // deadline
            );
        } else {
            IUniswapV2Router02(PANCAKE_ROUTER).swapExactTokensForTokens(
                loan_amount, // amountIn
                amount_to_repay, // amountOut
                path, // path
                address(this), // to address
                block.timestamp + DEADLINE // deadline
            );
        }
        uint256 balance_after = getBalanceOfToken(path[0]);
        require(balance_after > balance_before, "Lossing trade");

        // Check Profitability
        uint256 actual_returns = balance_after - balance_before;
        require((actual_returns > amount_to_repay), "Arbitrage not profitable");

        // Pay Ourself
        IERC20(path[0]).transfer(my_address, actual_returns - amount_to_repay);

        // Pay FlashLoan Back
        IERC20(path[0]).transfer(pair, amount_to_repay);
    }
}