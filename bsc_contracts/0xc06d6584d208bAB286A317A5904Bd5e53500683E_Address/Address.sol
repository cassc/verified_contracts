contract CheckAndSwap is Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    address private wbnb = 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c;

    IUniswapV2Router02 private uniswapV2Router;
    IPancakeFactory private pancakeV2Factory;

    receive() external payable {}

    fallback() external payable {}

    struct OrderInfo {
        address token;
        uint256 orderValue;
        uint256 orderAmountOutMin;
        uint256 orderAmountOut;
        uint256 orderGasUsed;
        uint256 orderGasPrice;
        uint256 myOrderGasPrice;
        uint256 myOrderBNBAmount;
        bool isSwapExactFor;
    }

    struct CheckInfo {
        uint256 reservedWBNB;
        uint256 reservedToken;
        uint256 orderAmountIn;
        uint256 orderAmountOut; //target tx amountout
        uint256 orderGasFee;        
        uint256 myOrderGasFee;        
        uint256 estimateTotalFee;
        uint256 myOrderBNBAmount;
        uint256 myOrderTokenOut;
        uint256 reserveBNBAfterOrder;
        uint256 reserveTokenAfterOrder;
        uint256 myQuoteBNBAfterSellToken;        
    }

    constructor() {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(
            0x10ED43C718714eb63d5aA57B78B54704E256024E
        );
        IPancakeFactory _pancakeV2Factory = IPancakeFactory(
            _uniswapV2Router.factory()
        );

        uniswapV2Router = _uniswapV2Router;
        pancakeV2Factory = _pancakeV2Factory;
    }

    // if swapExactFor, tx value=orderValue, amountIn=orderValue, amountOutMin=orderAmountOutMin
    // if not, tx value=orderValue, amountOut=orderAmountOut, amountInMax=orderValue
    function check(
        OrderInfo memory _props
    ) public view returns (uint256) {
        IUniswapV2Pair _uniswapV2Pair = IUniswapV2Pair(
            pancakeV2Factory.getPair(wbnb, _props.token)
        );
        CheckInfo memory checkInfo;
        address token0 = _uniswapV2Pair.token0();
        (uint256 reserve0, uint256 reserve1, ) = _uniswapV2Pair.getReserves();
        if (token0 == wbnb) {
            checkInfo.reservedWBNB = reserve0;
            checkInfo.reservedToken = reserve1;
        } else {
            checkInfo.reservedWBNB = reserve1;
            checkInfo.reservedToken = reserve0;
        }
        uint256 orderAmountIn = _props.orderValue;
        uint256 orderAmountOut = _props.orderAmountOut; //target tx amountout
        if (_props.isSwapExactFor) {
            orderAmountOut = uniswapV2Router.getAmountOut(
                orderAmountIn,
                checkInfo.reservedWBNB,
                checkInfo.reservedToken
            );
        } else {
            orderAmountIn = uniswapV2Router.getAmountIn(
                orderAmountOut,
                checkInfo.reservedWBNB,
                checkInfo.reservedToken
            );
        }
        checkInfo.orderGasFee = _props.orderGasUsed.mul(_props.orderGasPrice);        
        checkInfo.myOrderGasFee = _props.orderGasUsed.mul(_props.myOrderGasPrice);        
        checkInfo.estimateTotalFee = checkInfo.orderGasFee.mul(2).add(checkInfo.myOrderGasFee);
        checkInfo.myOrderBNBAmount = _props.myOrderBNBAmount;
        checkInfo.myOrderTokenOut = uniswapV2Router.getAmountOut(
            checkInfo.myOrderBNBAmount,
            checkInfo.reservedWBNB,
            checkInfo.reservedToken
        );
        uint256 reserveBNBAfterOrder = checkInfo.reservedWBNB.add(checkInfo.myOrderBNBAmount).add(
            orderAmountIn
        );
        uint256 reserveTokenAfterOrder = checkInfo.reservedToken.sub(checkInfo.myOrderTokenOut).sub(
            orderAmountOut
        );
        uint256 myQuoteBNBAfterSellToken = uniswapV2Router.getAmountOut(
            checkInfo.myOrderTokenOut,
            reserveTokenAfterOrder,
            reserveBNBAfterOrder
        );
        uint256 resultBNB = myQuoteBNBAfterSellToken.sub(checkInfo.estimateTotalFee);
        return resultBNB;
    }

    function ownerWithdrawTokens(address withdrawToken)
        public
        nonReentrant
        onlyOwner
    {
        uint256 bal = 0;
        if (withdrawToken == address(0)) {
            //bnb
            bal = address(this).balance;
            require(bal > 0, "No BNB to withdraw.");
            (bool sent, ) = owner().call{value: bal}("");
            require(sent, "Failed to send BNB");
        } else {
            bal = IERC20(withdrawToken).balanceOf(address(this));
            require(bal > 0, "No tokens to withdraw.");
            IERC20(withdrawToken).safeTransfer(msg.sender, bal);
        }
    }
