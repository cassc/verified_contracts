        address recipient;
    }

    DistributionInfo[] public distributionInfo;

    address public owner;

    modifier onlyOwner() {
        require(owner == msg.sender, "Caller is not the owner");
        _;
    }

    constructor() {
        owner = msg.sender;
        ohmToken = IERC20(address(0));
