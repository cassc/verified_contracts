/// @title Baa reward
contract SheepBAAReward is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    bool private initialized;

    struct PoolInfo {
        bytes32 merkleRoot;
        uint256 startTime;
        uint256 endTime;
    }
    
    address public baa;

    address public playerBook;
    address public sheepTeam;

    uint256 public captainRate; // 10000;

    address public teamAddress;

    PoolInfo[] public poolInfo;
    uint256 public cunrrentPoolIndex;
    
    // pool->user->claim
    mapping(uint256 => mapping(address => bool)) public claimed;
    
    event UpdateCurrentPoolIndex(uint256 _curPid);

    event AddPool(
        uint256 _poolLength,
        bytes32 _merkleRoot,
        uint256 _startTime,
        uint256 _endTime);

    event UpdatePool(
        uint256 indexed _pid,
        bytes32 _merkleRoot,
        uint256 _startTime,
        uint256 _endTime);

    event Claimed(
        uint256 indexed _pid,
        address indexed account,
        address captain,
        uint256 amount,
        uint256 reward);

    function initialize(
        address onwer_,
        address baa_,
        address playerBook_,
        address sheepTeam_,
        uint256 captainRate_,
        address teamAddress_) external {
        require(!initialized, "initialize: Already initialized!");
        _transferOwnership(onwer_);
        baa = baa_;

        playerBook = playerBook_;
        sheepTeam = sheepTeam_;
        captainRate = captainRate_;
        teamAddress = teamAddress_;

        initialized = true;
    }

    function addPool(
        bytes32 _merkleRoot,
        uint256 _startTime,
        uint256 _endTime)
        external onlyOwner {
        
        cunrrentPoolIndex = poolInfo.length;

        poolInfo.push(PoolInfo({
            merkleRoot: _merkleRoot,
            startTime: _startTime,
            endTime: _endTime
        }));
        
        emit AddPool(poolInfo.length, _merkleRoot, _startTime, _endTime);
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    function claim(
        uint256 userId,
        uint256 amount,
        bytes32[] calldata merkleProof,
        string memory affCode) external nonReentrant {
        
        uint256 _pid = cunrrentPoolIndex;

        PoolInfo memory pool = poolInfo[_pid];
        address account = msg.sender;
        require(!claimed[_pid][account], 'ClaimBAA: Drop already claimed.');
        require(pool.startTime < block.timestamp, 'ClaimBAA: Go to the next issue.');
        require(pool.endTime > block.timestamp, 'ClaimBAA: Go to the next issue.');
        
        if (!IPlayerBook(playerBook).hasRefer(account)) {
            IPlayerBook(playerBook).bindRefer(account, affCode);
        }

        // Verify the merkle proof.
        bytes32 node = keccak256(abi.encodePacked(userId, account, amount));
        require(MerkleProof.verify(merkleProof, pool.merkleRoot, node), 'ClaimBaa: Invalid proof.');

        claimed[_pid][account] = true;

        ISheepBaa(baa).mint(teamAddress, amount.mul(1).div(10));
        
        // playbook 1.aff 7% 2.aff_aff 3%
        uint256 referralFee = IPlayerBook(playerBook).settleReward(account, amount);
        if(referralFee > 0){
            ISheepBaa(baa).mint(playerBook, referralFee);
        }
        
        uint256 leftAmount = amount.sub(referralFee);
        
        // Team captain
        uint256 teamId = ISheepTeam(sheepTeam).player2Teams(account);
        address captain = address(0);
        (,captain, ) = ISheepTeam(sheepTeam).getTeamInfo(teamId);
        if (captain == address(0)) {
            captain = teamAddress;
        }

        uint256 bonusFee = leftAmount.mul(captainRate).div(10000);
        
        ISheepBaa(baa).mint(captain, bonusFee);
        leftAmount = leftAmount.sub(bonusFee);

        ISheepBaa(baa).mint(account, leftAmount);
        uint256 amount_ = amount;
        
        emit Claimed(_pid, account, captain, amount_, leftAmount);
    }
    
    function updateCurrentPoolIndex(
        uint256 _curPid
    ) external onlyOwner {
        cunrrentPoolIndex = _curPid;
        emit UpdateCurrentPoolIndex(_curPid);
    }

    function updatePoolInfo(
        uint256 _pid,
        bytes32 _merkleRoot,
        uint256 _startTime,
        uint256 _endTime
    ) external onlyOwner {
        PoolInfo storage pool = poolInfo[_pid];
        pool.merkleRoot = _merkleRoot;
        pool.startTime = _startTime;
        pool.endTime = _endTime;
        emit UpdatePool(_pid, _merkleRoot, _startTime, _endTime);
    }
}