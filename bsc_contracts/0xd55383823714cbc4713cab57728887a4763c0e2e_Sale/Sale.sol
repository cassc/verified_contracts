    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    IERC20 public USDT = IERC20(0x55d398326f99059fF775485246999027B3197955); 
    IERC20 public BUSD = IERC20(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56);

    struct User {
        uint256 total_deposits;
    }

    mapping(address => User) public users;

    address public manager;
    address public treasury;

    uint256 public startTime;
    uint256 public endTime;
    uint256 public minDepositAmount = 50 ether;
    uint256 public totalraiseCapPublic = 500000 ether;
    uint256 public total_deposited;
 
    bool public enabled = true;

    constructor(uint256 _startTime, address _treasury) {
        startTime = _startTime;
        endTime = startTime + 7 days;
        treasury = _treasury;
        manager = msg.sender;   
    }
 
     receive() external payable {
        revert("Do not send tokens other than presale tokens.");
    }

    modifier onlyManager() {
        require(msg.sender == manager, "Caller is not the manager!");
        _;
    }

    modifier checkOpen() {
        require(enabled && block.timestamp > startTime && block.timestamp < endTime, "Sale Not Open");
        _;
    }

    function buywithBUSD(uint256 _amount) nonReentrant external checkOpen {
        joinSale(_amount, BUSD);
    }

    function buywithUSDT(uint256 _amount) nonReentrant external checkOpen {
        joinSale(_amount, USDT);
    }

    function joinSale(uint256 _amount, IERC20 _token) internal {
        address _sender = msg.sender;

        require(_amount >= minDepositAmount, "Should deposit more than minimum deposit amount per one time");
        require(_amount + total_deposited <= totalraiseCapPublic, "Total Cap Reached");

        require(_token.balanceOf(_sender) >= _amount, "Insufficient balance");
        require(_token.allowance(_sender, address(this)) >= _amount, "Insufficient allowance");

        _token.safeTransferFrom(_sender, address(this), _amount);
        users[_sender].total_deposits = users[_sender].total_deposits.add(_amount);
        total_deposited = total_deposited.add(_amount);
    }


    function setStart(uint256 _time) external onlyManager {
        startTime = _time;
    }

    function setEnd(uint256 _time) external onlyManager {
        endTime = _time;
    }

    function setEnabled(bool _enabled) external onlyManager {
        enabled = _enabled;
    }

    function setMinDepositAmount(uint256 _amount) external onlyManager {
        minDepositAmount = _amount;
    }

    function setTotalRaise(uint256 _amount) external onlyManager {
        totalraiseCapPublic = _amount;
    }

    function setWithdrawAddress(address payable _treasury) external onlyManager {
        require(_treasury != address(0), "Zero address");
        treasury = _treasury;
    }

    function changeManager(address _newManager) external onlyManager {
        require(_newManager != address(0), "Zero address");
        manager = _newManager;
    }

    function withdraw() external {
        uint256 totalBUSD = BUSD.balanceOf(address(this));
        uint256 totalUSDT = USDT.balanceOf(address(this));
        BUSD.safeTransfer(treasury, totalBUSD);
        USDT.safeTransfer(treasury, totalUSDT);
    }

    function emergencyWithdraw(IERC20 _token, uint256 _amnt) external onlyManager {
        _token.safeTransfer(treasury, _amnt);
    }

}